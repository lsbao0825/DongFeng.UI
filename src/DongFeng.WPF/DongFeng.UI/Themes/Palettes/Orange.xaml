<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  DF UI Color Palette: Orange (Deep Themed)  -->

    <!--  Primary  -->
    <Color x:Key="DF_Color_Primary">#f0a020</Color>
    <Color x:Key="DF_Color_Primary_Hover">#fcb040</Color>
    <Color x:Key="DF_Color_Primary_Pressed">#c97c10</Color>

    <!--  Semantic Colors  -->
    <Color x:Key="DF_Color_Success">#18a058</Color>
    <Color x:Key="DF_Color_Info">#f0a020</Color>
    <Color x:Key="DF_Color_Warning">#f0a020</Color>
    <Color x:Key="DF_Color_Error">#d03050</Color>

    <!--  Backgrounds  -->
    <Color x:Key="DF_Color_Background_Light">#fefaf3</Color>
    <Color x:Key="DF_Color_Background_Dark">#312515</Color>
    <Color x:Key="DF_Color_Surface_Light">#fefdfa</Color>
    <Color x:Key="DF_Color_Surface_Dark">#43331c</Color>

    <!--  Control Fill  -->
    <Color x:Key="DF_Color_Fill_Light">#fefcf8</Color>
    <Color x:Key="DF_Color_Fill_Dark">#312515</Color>

    <!--  Header Background  -->
    <Color x:Key="DF_Color_Header_Light">#fdf7ed</Color>
    <Color x:Key="DF_Color_Header_Dark">#533f21</Color>

    <!--  Text (Tinted)  -->
    <Color x:Key="DF_Color_Text_Primary_Light">#6b5531</Color>
    <Color x:Key="DF_Color_Text_Primary_Dark">#fdf5e8</Color>
    <Color x:Key="DF_Color_Text_Secondary_Light">#a18963</Color>
    <Color x:Key="DF_Color_Text_Secondary_Dark">#a6f0dd</Color>
    <Color x:Key="DF_Color_Text_PlaceHolder_Light">#cbbba1</Color>
    <Color x:Key="DF_Color_Text_PlaceHolder_Dark">#736b5f</Color>

    <!--  Border (Tinted)  -->
    <Color x:Key="DF_Color_Border_Light">#e3d3be</Color>
    <Color x:Key="DF_Color_Border_Dark">#775f39</Color>

    <!--  SolidColorBrushes (Legacy/Compat)  -->
    <SolidColorBrush x:Key="DF_Primary_Brush" Color="{StaticResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Primary_Hover_Brush" Color="{StaticResource DF_Color_Primary_Hover}" />
    <SolidColorBrush x:Key="DF_Primary_Pressed_Brush" Color="{StaticResource DF_Color_Primary_Pressed}" />

    <SolidColorBrush x:Key="DF_Success_Brush" Color="{StaticResource DF_Color_Success}" />
    <SolidColorBrush x:Key="DF_Info_Brush" Color="{StaticResource DF_Color_Info}" />
    <SolidColorBrush x:Key="DF_Warning_Brush" Color="{StaticResource DF_Color_Warning}" />
    <SolidColorBrush x:Key="DF_Error_Brush" Color="{StaticResource DF_Color_Error}" />

</ResourceDictionary>
