<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  DF UI Color Palette: Cyan (Deep Themed)  -->

    <!--  Primary  -->
    <Color x:Key="DF_Color_Primary">#11a8cd</Color>
    <Color x:Key="DF_Color_Primary_Hover">#38bcdf</Color>
    <Color x:Key="DF_Color_Primary_Pressed">#0b86a3</Color>

    <!--  Semantic Colors  -->
    <Color x:Key="DF_Color_Success">#18a058</Color>
    <Color x:Key="DF_Color_Info">#11a8cd</Color>
    <Color x:Key="DF_Color_Warning">#f0a020</Color>
    <Color x:Key="DF_Color_Error">#d03050</Color>

    <!--  Backgrounds  -->
    <Color x:Key="DF_Color_Background_Light">#f3fafc</Color>
    <Color x:Key="DF_Color_Background_Dark">#10262f</Color>
    <Color x:Key="DF_Color_Surface_Light">#fafdfe</Color>
    <Color x:Key="DF_Color_Surface_Dark">#16343f</Color>

    <!--  Control Fill  -->
    <Color x:Key="DF_Color_Fill_Light">#f7fcfd</Color>
    <Color x:Key="DF_Color_Fill_Dark">#10262f</Color>

    <!--  Header Background  -->
    <Color x:Key="DF_Color_Header_Light">#ebf8fb</Color>
    <Color x:Key="DF_Color_Header_Dark">#1b414c</Color>

    <!--  Text (Tinted)  -->
    <Color x:Key="DF_Color_Text_Primary_Light">#285865</Color>
    <Color x:Key="DF_Color_Text_Primary_Dark">#e7f6fa</Color>
    <Color x:Key="DF_Color_Text_Secondary_Light">#5e8c97</Color>
    <Color x:Key="DF_Color_Text_Secondary_Dark">#84f1f7</Color>
    <Color x:Key="DF_Color_Text_PlaceHolder_Light">#9ebcc4</Color>
    <Color x:Key="DF_Color_Text_PlaceHolder_Dark">#5d6c70</Color>

    <!--  Border (Tinted)  -->
    <Color x:Key="DF_Color_Border_Light">#b6d4e1</Color>
    <Color x:Key="DF_Color_Border_Dark">#34626d</Color>

    <!--  SolidColorBrushes (Legacy/Compat)  -->
    <SolidColorBrush x:Key="DF_Primary_Brush" Color="{StaticResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Primary_Hover_Brush" Color="{StaticResource DF_Color_Primary_Hover}" />
    <SolidColorBrush x:Key="DF_Primary_Pressed_Brush" Color="{StaticResource DF_Color_Primary_Pressed}" />

    <SolidColorBrush x:Key="DF_Success_Brush" Color="{StaticResource DF_Color_Success}" />
    <SolidColorBrush x:Key="DF_Info_Brush" Color="{StaticResource DF_Color_Info}" />
    <SolidColorBrush x:Key="DF_Warning_Brush" Color="{StaticResource DF_Color_Warning}" />
    <SolidColorBrush x:Key="DF_Error_Brush" Color="{StaticResource DF_Color_Error}" />

</ResourceDictionary>
