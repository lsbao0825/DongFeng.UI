<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  DF UI Color Palette: Purple  -->

    <!--  Primary  -->
    <Color x:Key="DF_Color_Primary">#8a2be2</Color>
    <Color x:Key="DF_Color_Primary_Hover">#9d5ce5</Color>
    <Color x:Key="DF_Color_Primary_Pressed">#5e16a6</Color>

    <!--  Semantic Colors  -->
    <Color x:Key="DF_Color_Success">#18a058</Color>
    <Color x:Key="DF_Color_Info">#8a2be2</Color> 
    <!-- Info often follows Primary if blue/cyan, but let's keep standard or link to primary if desired -->
    <Color x:Key="DF_Color_Warning">#f0a020</Color>
    <Color x:Key="DF_Color_Error">#d03050</Color>

    <!--  Backgrounds (Tinted)  -->
    <Color x:Key="DF_Color_Background_Light">#fcfafe</Color>
    <Color x:Key="DF_Color_Background_Dark">#16111e</Color>
    <Color x:Key="DF_Color_Surface_Light">#FFFFFF</Color>
    <Color x:Key="DF_Color_Surface_Dark">#21192b</Color>

    <!--  Control Fill  -->
    <Color x:Key="DF_Color_Fill_Light">#fbf8fe</Color>
    <Color x:Key="DF_Color_Fill_Dark">#221432</Color>

    <!--  Header Background  -->
    <Color x:Key="DF_Color_Header_Light">#faf6fd</Color>
    <Color x:Key="DF_Color_Header_Dark">#292035</Color>

    <!--  Text  -->
    <Color x:Key="DF_Color_Text_Primary_Light">#333639</Color>
    <Color x:Key="DF_Color_Text_Primary_Dark">#E6FFFFFF</Color>
    <Color x:Key="DF_Color_Text_Secondary_Light">#B33C3C3C</Color>
    <Color x:Key="DF_Color_Text_Secondary_Dark">#99FFFFFF</Color>
    <Color x:Key="DF_Color_Text_PlaceHolder_Light">#c2c2c2</Color>
    <Color x:Key="DF_Color_Text_PlaceHolder_Dark">#666666</Color>

    <!--  Border  -->
    <Color x:Key="DF_Color_Border_Light">#e0e0e6</Color>
    <Color x:Key="DF_Color_Border_Dark">#26FFFFFF</Color>

    <!--  SolidColorBrushes (Legacy/Compat)  -->
    <SolidColorBrush x:Key="DF_Primary_Brush" Color="{StaticResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Primary_Hover_Brush" Color="{StaticResource DF_Color_Primary_Hover}" />
    <SolidColorBrush x:Key="DF_Primary_Pressed_Brush" Color="{StaticResource DF_Color_Primary_Pressed}" />

    <SolidColorBrush x:Key="DF_Success_Brush" Color="{StaticResource DF_Color_Success}" />
    <SolidColorBrush x:Key="DF_Info_Brush" Color="{StaticResource DF_Color_Info}" />
    <SolidColorBrush x:Key="DF_Warning_Brush" Color="{StaticResource DF_Color_Warning}" />
    <SolidColorBrush x:Key="DF_Error_Brush" Color="{StaticResource DF_Color_Error}" />

</ResourceDictionary>
