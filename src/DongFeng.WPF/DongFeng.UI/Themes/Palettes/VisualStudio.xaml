<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  DF UI Color Palette: Visual Studio (Modern Dark/Light)  -->

    <!--  Primary Blue/Purple  -->
    <Color x:Key="DF_Color_Primary">#007acc</Color>
    <Color x:Key="DF_Color_Primary_Hover">#1f8ad2</Color>
    <Color x:Key="DF_Color_Primary_Pressed">#005a9e</Color>

    <!--  Semantic Colors  -->
    <Color x:Key="DF_Color_Success">#3fb950</Color>
    <Color x:Key="DF_Color_Info">#007acc</Color>
    <Color x:Key="DF_Color_Warning">#e3b341</Color>
    <Color x:Key="DF_Color_Error">#f14c4c</Color>

    <!--  Backgrounds  -->
    <Color x:Key="DF_Color_Background_Light">#ffffff</Color>
    <Color x:Key="DF_Color_Background_Dark">#1e1e1e</Color>
    <Color x:Key="DF_Color_Surface_Light">#f3f3f3</Color>
    <Color x:Key="DF_Color_Surface_Dark">#252526</Color>

    <!--  Control Fill  -->
    <Color x:Key="DF_Color_Fill_Light">#ffffff</Color>
    <Color x:Key="DF_Color_Fill_Dark">#333333</Color>

    <!--  Header Background  -->
    <Color x:Key="DF_Color_Header_Light">#f3f3f3</Color>
    <Color x:Key="DF_Color_Header_Dark">#2d2d30</Color>

    <!--  Text  -->
    <Color x:Key="DF_Color_Text_Primary_Light">#1e1e1e</Color>
    <Color x:Key="DF_Color_Text_Primary_Dark">#cccccc</Color>
    <Color x:Key="DF_Color_Text_Secondary_Light">#717171</Color>
    <Color x:Key="DF_Color_Text_Secondary_Dark">#999999</Color>
    <Color x:Key="DF_Color_Text_PlaceHolder_Light">#a6a6a6</Color>
    <Color x:Key="DF_Color_Text_PlaceHolder_Dark">#666666</Color>

    <!--  Border  -->
    <Color x:Key="DF_Color_Border_Light">#e6e6e6</Color>
    <Color x:Key="DF_Color_Border_Dark">#3e3e42</Color>

    <!--  SolidColorBrushes (Legacy/Compat)  -->
    <SolidColorBrush x:Key="DF_Primary_Brush" Color="{StaticResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Primary_Hover_Brush" Color="{StaticResource DF_Color_Primary_Hover}" />
    <SolidColorBrush x:Key="DF_Primary_Pressed_Brush" Color="{StaticResource DF_Color_Primary_Pressed}" />

    <SolidColorBrush x:Key="DF_Success_Brush" Color="{StaticResource DF_Color_Success}" />
    <SolidColorBrush x:Key="DF_Info_Brush" Color="{StaticResource DF_Color_Info}" />
    <SolidColorBrush x:Key="DF_Warning_Brush" Color="{StaticResource DF_Color_Warning}" />
    <SolidColorBrush x:Key="DF_Error_Brush" Color="{StaticResource DF_Color_Error}" />

</ResourceDictionary>
