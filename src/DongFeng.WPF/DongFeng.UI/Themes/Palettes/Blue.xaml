<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  DF UI Color Palette: Blue (Deep Themed)  -->

    <!--  Primary  -->
    <Color x:Key="DF_Color_Primary">#2080f0</Color>
    <Color x:Key="DF_Color_Primary_Hover">#4098fc</Color>
    <Color x:Key="DF_Color_Primary_Pressed">#1060c9</Color>

    <!--  Semantic Colors  -->
    <Color x:Key="DF_Color_Success">#18a058</Color>
    <Color x:Key="DF_Color_Info">#2080f0</Color>
    <Color x:Key="DF_Color_Warning">#f0a020</Color>
    <Color x:Key="DF_Color_Error">#d03050</Color>

    <!--  Backgrounds  -->
    <Color x:Key="DF_Color_Background_Light">#f3f8fe</Color>
    <Color x:Key="DF_Color_Background_Dark">#122035</Color>
    <Color x:Key="DF_Color_Surface_Light">#fafcfe</Color>
    <Color x:Key="DF_Color_Surface_Dark">#192c46</Color>

    <!--  Control Fill  -->
    <Color x:Key="DF_Color_Fill_Light">#f8fbfe</Color>
    <Color x:Key="DF_Color_Fill_Dark">#122035</Color>

    <!--  Header Background  -->
    <Color x:Key="DF_Color_Header_Light">#edf4fd</Color>
    <Color x:Key="DF_Color_Header_Dark">#1f3755</Color>

    <!--  Text (Tinted)  -->
    <Color x:Key="DF_Color_Text_Primary_Light">#2d4c6f</Color>
    <Color x:Key="DF_Color_Text_Primary_Dark">#e8f2fd</Color>
    <Color x:Key="DF_Color_Text_Secondary_Light">#6380a1</Color>
    <Color x:Key="DF_Color_Text_Secondary_Dark">#86ebfc</Color>
    <Color x:Key="DF_Color_Text_PlaceHolder_Light">#a1b4cb</Color>
    <Color x:Key="DF_Color_Text_PlaceHolder_Dark">#5f6873</Color>

    <!--  Border (Tinted)  -->
    <Color x:Key="DF_Color_Border_Light">#b9cce8</Color>
    <Color x:Key="DF_Color_Border_Dark">#395677</Color>

    <!--  SolidColorBrushes (Legacy/Compat)  -->
    <SolidColorBrush x:Key="DF_Primary_Brush" Color="{StaticResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Primary_Hover_Brush" Color="{StaticResource DF_Color_Primary_Hover}" />
    <SolidColorBrush x:Key="DF_Primary_Pressed_Brush" Color="{StaticResource DF_Color_Primary_Pressed}" />

    <SolidColorBrush x:Key="DF_Success_Brush" Color="{StaticResource DF_Color_Success}" />
    <SolidColorBrush x:Key="DF_Info_Brush" Color="{StaticResource DF_Color_Info}" />
    <SolidColorBrush x:Key="DF_Warning_Brush" Color="{StaticResource DF_Color_Warning}" />
    <SolidColorBrush x:Key="DF_Error_Brush" Color="{StaticResource DF_Color_Error}" />

</ResourceDictionary>
