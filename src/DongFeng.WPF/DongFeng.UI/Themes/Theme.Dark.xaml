<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/DongFeng.UI;component/Themes/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="Brush_Background" Color="{StaticResource Color_Background_Dark}" />
    <SolidColorBrush x:Key="Brush_Surface" Color="{StaticResource Color_Surface_Dark}" />
    <SolidColorBrush x:Key="Brush_Fill" Color="{StaticResource Color_Fill_Dark}" />
    <SolidColorBrush x:Key="Brush_Header" Color="{StaticResource Color_Header_Dark}" />

    <SolidColorBrush x:Key="Brush_Text_Primary" Color="{StaticResource Color_Text_Primary_Dark}" />
    <SolidColorBrush x:Key="Brush_Text_Secondary" Color="{StaticResource Color_Text_Secondary_Dark}" />
    <SolidColorBrush x:Key="Brush_Text_PlaceHolder" Color="{StaticResource Color_Text_PlaceHolder_Dark}" />
    <SolidColorBrush x:Key="Brush_Border" Color="{StaticResource Color_Border_Dark}" />

</ResourceDictionary>
