<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/DongFeng.UI;component/Themes/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>
    -->

    <!--  Global Brushes  -->
    <SolidColorBrush x:Key="DF_Background_Brush" Color="{DynamicResource DF_Color_Background_Dark}" />
    <SolidColorBrush x:Key="DF_Surface_Brush" Color="{DynamicResource DF_Color_Surface_Dark}" />
    <SolidColorBrush x:Key="DF_Control_Fill_Brush" Color="{DynamicResource DF_Color_Fill_Dark}" />
    <SolidColorBrush x:Key="DF_Border_Brush" Color="{DynamicResource DF_Color_Border_Dark}" />

    <!--  Text Brushes  -->
    <SolidColorBrush x:Key="DF_Text_Primary_Brush" Color="{DynamicResource DF_Color_Text_Primary_Dark}" />
    <SolidColorBrush x:Key="DF_Text_Secondary_Brush" Color="{DynamicResource DF_Color_Text_Secondary_Dark}" />
    <SolidColorBrush x:Key="DF_Text_Placeholder_Brush" Color="{DynamicResource DF_Color_Text_PlaceHolder_Dark}" />

    <!--  Control Specifics: Header  -->
    <SolidColorBrush x:Key="DF_Header_Background_Brush" Color="{DynamicResource DF_Color_Header_Dark}" />
    <SolidColorBrush x:Key="DF_Header_Foreground_Brush" Color="{DynamicResource DF_Color_Text_Primary_Dark}" />

    <!--  Control Specifics: Button (Default)  -->
    <SolidColorBrush x:Key="DF_Button_Background_Base" Color="{DynamicResource DF_Color_Header_Dark}" />
    <SolidColorBrush x:Key="DF_Button_Foreground_Base" Color="{DynamicResource DF_Color_Text_Primary_Dark}" />
    <SolidColorBrush x:Key="DF_Button_Border_Base" Color="{DynamicResource DF_Color_Border_Dark}" />
    <SolidColorBrush x:Key="DF_Button_Background_Hover" Color="{DynamicResource DF_Color_Primary_Hover}" />
    <SolidColorBrush x:Key="DF_Button_Background_Pressed" Color="{DynamicResource DF_Color_Primary_Pressed}" />
    <SolidColorBrush x:Key="DF_Button_Border_Hover" Color="{DynamicResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Button_Foreground_Hover" Color="{DynamicResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Button_Foreground_Pressed" Color="{DynamicResource DF_Color_Primary_Pressed}" />

    <!--  Control Specifics: Button (Primary)  -->
    <SolidColorBrush x:Key="DF_Button_Primary_Background" Color="{DynamicResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Button_Primary_Border" Color="{DynamicResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Button_Primary_Foreground" Color="White" />
    <SolidColorBrush x:Key="DF_Button_Primary_Background_Hover" Color="{DynamicResource DF_Color_Primary_Hover}" />
    <SolidColorBrush x:Key="DF_Button_Primary_Border_Hover" Color="{DynamicResource DF_Color_Primary_Hover}" />
    <SolidColorBrush x:Key="DF_Button_Primary_Background_Pressed" Color="{DynamicResource DF_Color_Primary_Pressed}" />
    <SolidColorBrush x:Key="DF_Button_Primary_Border_Pressed" Color="{DynamicResource DF_Color_Primary_Pressed}" />

    <!--  Control Specifics: Input (TextBox, etc)  -->
    <SolidColorBrush x:Key="DF_Input_Background" Color="{DynamicResource DF_Color_Fill_Dark}" />
    <SolidColorBrush x:Key="DF_Input_Border" Color="{DynamicResource DF_Color_Border_Dark}" />
    <SolidColorBrush x:Key="DF_Input_Foreground" Color="{DynamicResource DF_Color_Text_Primary_Dark}" />
    <SolidColorBrush x:Key="DF_Input_Placeholder" Color="{DynamicResource DF_Color_Text_PlaceHolder_Dark}" />
    <SolidColorBrush x:Key="DF_Input_Border_Hover" Color="{DynamicResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Input_Border_Focus" Color="{DynamicResource DF_Color_Primary}" />

    <!--  Control Specifics: Toggle (CheckBox, RadioButton)  -->
    <SolidColorBrush x:Key="DF_Toggle_Background_Unchecked" Color="Transparent" />
    <SolidColorBrush x:Key="DF_Toggle_Border_Unchecked" Color="{DynamicResource DF_Color_Border_Dark}" />
    <SolidColorBrush x:Key="DF_Toggle_Background_Checked" Color="{DynamicResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Toggle_Border_Checked" Color="{DynamicResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Toggle_Glyph" Color="White" />
    <SolidColorBrush x:Key="DF_Toggle_Background_Hover" Color="{DynamicResource DF_Color_Primary_Hover}" />

    <!--  Control Specifics: Item (ListBox, Menu, ComboBoxItem)  -->
    <SolidColorBrush x:Key="DF_Item_Background_Hover" Color="{DynamicResource DF_Color_Primary_Hover}" Opacity="0.2" />
    <SolidColorBrush x:Key="DF_Item_Foreground_Hover" Color="{DynamicResource DF_Color_Text_Primary_Dark}" />
    <SolidColorBrush x:Key="DF_Item_Background_Selected" Color="{DynamicResource DF_Color_Primary}" Opacity="0.25" />
    <SolidColorBrush x:Key="DF_Item_Foreground_Selected" Color="{DynamicResource DF_Color_Text_Primary_Dark}" />
    <SolidColorBrush x:Key="DF_Item_Border_Selected" Color="{DynamicResource DF_Color_Primary}" />

    <!--  Control Specifics: Progress / Slider  -->
    <SolidColorBrush x:Key="DF_Track_Background" Color="{DynamicResource DF_Color_Border_Dark}" />
    <SolidColorBrush x:Key="DF_Progress_Fill" Color="{DynamicResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Thumb_Border" Color="{DynamicResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Thumb_Fill" Color="#202020" />
    <SolidColorBrush x:Key="DF_Thumb_Hover" Color="{DynamicResource DF_Color_Primary_Hover}" />

    <!--  Control Specifics: Popup (Menu, ToolTip)  -->
    <SolidColorBrush x:Key="DF_Popup_Background" Color="{DynamicResource DF_Color_Surface_Dark}" />
    <SolidColorBrush x:Key="DF_Popup_Border" Color="{DynamicResource DF_Color_Border_Dark}" />
    <SolidColorBrush x:Key="DF_Popup_Foreground" Color="{DynamicResource DF_Color_Text_Primary_Dark}" />

    <!--  Control Specifics: TabControl  -->
    <SolidColorBrush x:Key="DF_Tab_Background" Color="Transparent" />
    <SolidColorBrush x:Key="DF_Tab_Foreground" Color="{DynamicResource DF_Color_Text_Secondary_Dark}" />
    <SolidColorBrush x:Key="DF_Tab_Foreground_Selected" Color="{DynamicResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Tab_Foreground_Hover" Color="{DynamicResource DF_Color_Text_Primary_Dark}" />
    <SolidColorBrush x:Key="DF_Tab_Indicator_Brush" Color="{DynamicResource DF_Color_Primary}" />

    <!--  Control Specifics: Calendar  -->
    <SolidColorBrush x:Key="DF_Calendar_Background" Color="{DynamicResource DF_Color_Surface_Dark}" />
    <SolidColorBrush x:Key="DF_Calendar_Border" Color="{DynamicResource DF_Color_Border_Dark}" />
    <SolidColorBrush x:Key="DF_Calendar_Header_Button_Hover" Color="{DynamicResource DF_Color_Fill_Dark}" />
    <SolidColorBrush x:Key="DF_Calendar_Day_Hover" Color="{DynamicResource DF_Color_Primary_Hover}" />
    <SolidColorBrush x:Key="DF_Calendar_Day_Selected_Background" Color="{DynamicResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Calendar_Day_Selected_Foreground" Color="White" />
    <SolidColorBrush x:Key="DF_Calendar_Day_Today_Border" Color="{DynamicResource DF_Color_Primary}" />

    <!--  Control Specifics: Misc  -->
    <SolidColorBrush x:Key="DF_Window_TitleBar_Background" Color="{DynamicResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Expander_Arrow_Stroke_Selected" Color="{DynamicResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Expander_Arrow_Stroke_Hover" Color="{DynamicResource DF_Color_Primary_Hover}" />
    <SolidColorBrush x:Key="DF_Step_Indicator_Background_Active" Color="{DynamicResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Step_Line_Background_Active" Color="{DynamicResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Timeline_Dot_Border" Color="{DynamicResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Loading_Foreground" Color="{DynamicResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Breadcrumb_Foreground_Hover" Color="{DynamicResource DF_Color_Primary}" />
    <SolidColorBrush x:Key="DF_Code_Foreground" Color="{DynamicResource DF_Color_Primary}" />

</ResourceDictionary>