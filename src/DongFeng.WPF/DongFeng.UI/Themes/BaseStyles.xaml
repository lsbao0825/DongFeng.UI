<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="clr-namespace:DongFeng.UI.Helpers">

    <!--
        Base Style for all Controls
        Provides consistent Spacing, Typography and Colors
    -->
    <Style x:Key="DFControlBase" TargetType="Control">
        <Setter Property="Margin" Value="{DynamicResource DF_Margin_Default}" />
        <Setter Property="FontSize" Value="{DynamicResource DF_FontSize_Normal}" />
        <Setter Property="Padding" Value="{DynamicResource DF_Padding_Input}" />
        <Setter Property="Foreground" Value="{DynamicResource DF_Text_Primary_Brush}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
    </Style>

    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    <!--
        Base Style for Controls with Borders (Inputs, Buttons etc)
    -->
    <Style
        x:Key="DFBorderedControlBase"
        BasedOn="{StaticResource DFControlBase}"
        TargetType="Control">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{DynamicResource DF_Border_Brush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="helpers:ControlAttach.CornerRadius" Value="{DynamicResource DF_CornerRadius_Small}" />
    </Style>

    <!--
        Base Style for Text Inputs (TextBox, PasswordBox, ComboBox)
    -->
    <Style
        x:Key="DFInputBase"
        BasedOn="{StaticResource DFBorderedControlBase}"
        TargetType="Control">
        <Setter Property="Background" Value="{DynamicResource DF_Control_Fill_Brush}" />
        <Setter Property="Padding" Value="{DynamicResource DF_Padding_Input}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="helpers:ControlAttach.FocusBorderBrush" Value="{DynamicResource DF_Primary_Brush}" />
    </Style>

</ResourceDictionary>
