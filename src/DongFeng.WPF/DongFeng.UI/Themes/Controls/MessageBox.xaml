<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DongFeng.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/DongFeng.UI;component/Themes/BaseStyles.xaml" />
        <ResourceDictionary Source="pack://application:,,,/DongFeng.UI;component/Themes/Controls/Button.xaml" />
        <ResourceDictionary Source="pack://application:,,,/DongFeng.UI;component/Themes/Controls/Window.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style BasedOn="{StaticResource DFWindowStyle}" TargetType="{x:Type controls:DFMessageBox}">

        <Setter Property="Width" Value="300" />
        <Setter Property="MaxWidth" Value="300" />
        <Setter Property="SizeToContent" Value="Height" />
        <Setter Property="ResizeMode" Value="NoResize" />
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="ShowInTaskbar" Value="False" />
        <Setter Property="TitleBarHeight" Value="32" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DFMessageBox}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{DynamicResource DF_CornerRadius_Large}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <!--  Title  -->
                                <RowDefinition Height="*" />
                                <!--  Content  -->
                                <RowDefinition Height="Auto" />
                                <!--  Buttons  -->
                            </Grid.RowDefinitions>

                            <!--  Title Bar (Simplified)  -->
                            <Border
                                Height="{TemplateBinding TitleBarHeight}"
                                Background="{TemplateBinding TitleBarBackground}"
                                CornerRadius="8,8,0,0">
                                <Grid>
                                    <TextBlock
                                        Margin="16,0"
                                        VerticalAlignment="Center"
                                        FontWeight="Bold"
                                        Text="{TemplateBinding Title}" />
                                </Grid>
                            </Border>

                            <!--  Content  -->
                            <Grid Grid.Row="1" Margin="24,24,24,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  Icon  -->
                                <Image
                                    Grid.Column="0"
                                    Width="32"
                                    Height="32"
                                    Margin="0,0,16,0"
                                    VerticalAlignment="Top"
                                    Source="{TemplateBinding Icon}"
                                    Visibility="{TemplateBinding Icon,
                                                                 Converter={StaticResource BooleanToVisibilityConverter}}" />

                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    FontSize="{DynamicResource DF_FontSize_Normal}"
                                    Text="{TemplateBinding MessageText}"
                                    TextWrapping="Wrap" />
                            </Grid>

                            <!--  Buttons  -->
                            <StackPanel
                                Grid.Row="2"
                                Margin="16,0,16,16"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <StackPanel.Resources>
                                    <Style BasedOn="{StaticResource DFButton}" TargetType="Button">
                                        <Setter Property="Margin" Value="8,0,0,0" />
                                        <Setter Property="Width" Value="80" />
                                    </Style>
                                </StackPanel.Resources>

                                <Button
                                    x:Name="PART_BtnOK"
                                    Content="OK"
                                    Visibility="Collapsed" />
                                <Button
                                    x:Name="PART_BtnYes"
                                    Content="Yes"
                                    Visibility="Collapsed" />
                                <Button
                                    x:Name="PART_BtnNo"
                                    Content="No"
                                    Visibility="Collapsed" />
                                <Button
                                    x:Name="PART_BtnCancel"
                                    Content="Cancel"
                                    Visibility="Collapsed" />
                            </StackPanel>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!--  Button Visibility Logic  -->
                        <Trigger Property="BoxButton" Value="OK">
                            <Setter TargetName="PART_BtnOK" Property="Visibility" Value="Visible" />
                            <Setter TargetName="PART_BtnOK" Property="IsDefault" Value="True" />
                        </Trigger>
                        <Trigger Property="BoxButton" Value="OKCancel">
                            <Setter TargetName="PART_BtnOK" Property="Visibility" Value="Visible" />
                            <Setter TargetName="PART_BtnCancel" Property="Visibility" Value="Visible" />
                            <Setter TargetName="PART_BtnOK" Property="IsDefault" Value="True" />
                            <Setter TargetName="PART_BtnCancel" Property="IsCancel" Value="True" />
                        </Trigger>
                        <Trigger Property="BoxButton" Value="YesNo">
                            <Setter TargetName="PART_BtnYes" Property="Visibility" Value="Visible" />
                            <Setter TargetName="PART_BtnNo" Property="Visibility" Value="Visible" />
                            <Setter TargetName="PART_BtnYes" Property="IsDefault" Value="True" />
                            <Setter TargetName="PART_BtnNo" Property="IsCancel" Value="True" />
                        </Trigger>
                        <Trigger Property="BoxButton" Value="YesNoCancel">
                            <Setter TargetName="PART_BtnYes" Property="Visibility" Value="Visible" />
                            <Setter TargetName="PART_BtnNo" Property="Visibility" Value="Visible" />
                            <Setter TargetName="PART_BtnCancel" Property="Visibility" Value="Visible" />
                            <Setter TargetName="PART_BtnYes" Property="IsDefault" Value="True" />
                            <Setter TargetName="PART_BtnCancel" Property="IsCancel" Value="True" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

