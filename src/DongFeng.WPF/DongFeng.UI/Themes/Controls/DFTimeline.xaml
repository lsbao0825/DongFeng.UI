<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DongFeng.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DongFeng.UI;component/Themes/BaseStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:DFTimelineItem}">
        <Setter Property="Foreground" Value="{DynamicResource DF_Text_Primary_Brush}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Top" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DFTimelineItem}">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="24" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Indicator Column  -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Top Line (connects to previous)  -->
                            <!--  For simplicity we use Border for lines. If Dashed needed we could use Line or Rectangle with StrokeDashArray  -->
                            <!--
                                But border is easiest for solid. To support dashed efficiently without heavy changes, we can use a VisualBrush or similar,
                                but simpler to just switch to Rectangle if Dashed.
                            -->
                            <Rectangle
                                x:Name="LineTop"
                                Grid.Row="0"
                                Width="2"
                                HorizontalAlignment="Center"
                                Fill="{DynamicResource DF_Border_Brush}" />

                            <!--  Bottom Line (connects to next)  -->
                            <Rectangle
                                x:Name="LineBottom"
                                Grid.Row="1"
                                Width="2"
                                HorizontalAlignment="Center"
                                Fill="{DynamicResource DF_Border_Brush}" />

                            <!--  Dot  -->
                            <Border
                                x:Name="Dot"
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                Width="10"
                                Height="10"
                                Margin="0,3,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Background="{TemplateBinding Color}"
                                BorderBrush="{TemplateBinding Color}"
                                BorderThickness="2"
                                CornerRadius="5" />
                        </Grid>

                        <!--  Content Column  -->
                        <StackPanel Grid.Column="1" Margin="12,0,0,24">
                            <ContentPresenter
                                x:Name="HeaderPresenter"
                                Margin="0,0,0,4"
                                ContentSource="Header"
                                TextBlock.FontSize="12"
                                TextBlock.Foreground="{DynamicResource DF_Text_Secondary_Brush}" />
                            <ContentPresenter
                                x:Name="ContentPresenter"
                                Content="{TemplateBinding Content}"
                                ContentTemplate="{TemplateBinding ContentTemplate}" />
                        </StackPanel>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!--  Default Color if not set  -->
                        <Trigger Property="Color" Value="{x:Null}">
                            <Setter TargetName="Dot" Property="BorderBrush" Value="{DynamicResource DF_Timeline_Dot_Border}" />
                            <Setter TargetName="Dot" Property="Background" Value="Transparent" />
                        </Trigger>

                        <!--  Line Type: Dashed  -->
                        <Trigger Property="LineType" Value="Dashed">
                            <Setter TargetName="LineTop" Property="StrokeDashArray" Value="4 2" />
                            <Setter TargetName="LineTop" Property="Stroke" Value="{DynamicResource DF_Border_Brush}" />
                            <Setter TargetName="LineTop" Property="Fill" Value="Transparent" />

                            <Setter TargetName="LineBottom" Property="StrokeDashArray" Value="4 2" />
                            <Setter TargetName="LineBottom" Property="Stroke" Value="{DynamicResource DF_Border_Brush}" />
                            <Setter TargetName="LineBottom" Property="Fill" Value="Transparent" />
                        </Trigger>

                        <Trigger Property="LineType" Value="Dotted">
                            <Setter TargetName="LineTop" Property="StrokeDashArray" Value="1 2" />
                            <Setter TargetName="LineTop" Property="Stroke" Value="{DynamicResource DF_Border_Brush}" />
                            <Setter TargetName="LineTop" Property="Fill" Value="Transparent" />

                            <Setter TargetName="LineBottom" Property="StrokeDashArray" Value="1 2" />
                            <Setter TargetName="LineBottom" Property="Stroke" Value="{DynamicResource DF_Border_Brush}" />
                            <Setter TargetName="LineBottom" Property="Fill" Value="Transparent" />
                        </Trigger>

                        <!--  Hide Top Line for first item  -->
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource PreviousData}}" Value="{x:Null}">
                            <Setter TargetName="LineTop" Property="Visibility" Value="Hidden" />
                        </DataTrigger>

                        <!--  Hide Bottom Line for last item  -->
                        <Trigger Property="IsLast" Value="True">
                            <Setter TargetName="LineBottom" Property="Visibility" Value="Hidden" />
                        </Trigger>

                        <!--  Hide Header if null  -->
                        <Trigger Property="Header" Value="{x:Null}">
                            <Setter TargetName="HeaderPresenter" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type controls:DFTimeline}">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DFTimeline}">
                    <Border
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ItemsPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
