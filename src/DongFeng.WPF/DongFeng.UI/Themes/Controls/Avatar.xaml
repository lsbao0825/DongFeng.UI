<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:DongFeng.UI.Controls"
                    xmlns:converters="clr-namespace:DongFeng.UI.Converters">

    <converters:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter" />

    <Style x:Key="DFAvatar" TargetType="{x:Type controls:Avatar}">
        <Setter Property="Width" Value="40" />
        <Setter Property="Height" Value="40" />
        <Setter Property="Background" Value="{DynamicResource Brush_Border}" />
        <Setter Property="Foreground" Value="{DynamicResource Brush_Text_Secondary}" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:Avatar}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            ClipToBounds="True">
                        <Grid>
                            <!-- Text Fallback -->
                            <TextBlock x:Name="PART_Text"
                                       Text="{TemplateBinding Text}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{TemplateBinding Foreground}"
                                       FontSize="{TemplateBinding FontSize}"
                                       FontWeight="{TemplateBinding FontWeight}" />

                            <!-- Icon -->
                            <ContentControl x:Name="PART_Icon"
                                            Content="{TemplateBinding Icon}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="{TemplateBinding Foreground}"
                                            Background="{TemplateBinding Background}"
                                            Visibility="{Binding Icon, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ObjectToVisibilityConverter}}" />

                            <!-- Image Source -->
                            <Image x:Name="PART_Image"
                                   Source="{TemplateBinding Source}"
                                   Stretch="UniformToFill"
                                   Visibility="{Binding Source, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ObjectToVisibilityConverter}}" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource DFAvatar}" TargetType="{x:Type controls:Avatar}" />

</ResourceDictionary>
