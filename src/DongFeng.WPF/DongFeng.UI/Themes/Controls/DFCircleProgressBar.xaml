<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:DongFeng.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DongFeng.UI;component/Themes/BaseStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    <Style x:Key="DFDFCircleProgressBar" TargetType="{x:Type controls:DFCircleProgressBar}">
        <Setter Property="Foreground" Value="{DynamicResource Brush_Primary}" />
        <Setter Property="Background" Value="{DynamicResource Brush_Border}" />
        <Setter Property="Width" Value="120" />
        <Setter Property="Height" Value="120" />
        <Setter Property="StrokeThickness" Value="10" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DFCircleProgressBar}">
                    <Grid>
                        <!-- Background Path (Managed by Code Behind for perfect alignment) -->
                        <Path x:Name="PART_BackgroundPath"
                              Stroke="{TemplateBinding Background}"
                              StrokeThickness="{TemplateBinding StrokeThickness}"
                              StrokeEndLineCap="Round" 
                              StrokeStartLineCap="Round"/>

                        <!-- Progress Path -->
                        <Path x:Name="PART_IndicatorPath"
                              Stroke="{TemplateBinding Foreground}"
                              StrokeThickness="{TemplateBinding StrokeThickness}"
                              StrokeEndLineCap="Round"
                              StrokeStartLineCap="Round" />
                              
                        <!-- Center Text -->
                        <TextBlock x:Name="PercentageText"
                                   Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value, StringFormat={}{0:0}%}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   Foreground="{DynamicResource Brush_Text_Primary}"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsIndeterminate" Value="True">
                            <Setter TargetName="PercentageText" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type controls:DFCircleProgressBar}" BasedOn="{StaticResource DFDFCircleProgressBar}" />
</ResourceDictionary>
