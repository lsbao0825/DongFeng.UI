<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DongFeng.UI.Controls"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DongFeng.UI;component/Themes/BaseStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  DFRatingItem Style  -->
    <Style TargetType="{x:Type controls:DFRatingItem}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <!--  Use inherited foreground so DFRating control can override it easily  -->
        <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=controls:DFRating}}" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="2,0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DFRatingItem}">
                    <Grid Background="{TemplateBinding Background}">
                        <!--  Outline Star (Inactive)  -->
                        <!--  Optimized: Use Brush_Text_Tertiary or PlaceHolder for inactive state to better match theme  -->
                        <iconPacks:PackIconMaterial
                            x:Name="Outline"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Foreground="{DynamicResource DF_Text_Placeholder_Brush}"
                            Kind="StarOutline" />

                        <!--  Filled Star (Active)  -->
                        <iconPacks:PackIconMaterial
                            x:Name="Filled"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Foreground="{TemplateBinding Foreground}"
                            Kind="Star"
                            Visibility="Collapsed" />

                        <!--  Half Star (Active)  -->
                        <iconPacks:PackIconMaterial
                            x:Name="Half"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Foreground="{TemplateBinding Foreground}"
                            Kind="StarHalfFull"
                            Visibility="Collapsed" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="State" Value="Full">
                            <Setter TargetName="Filled" Property="Visibility" Value="Visible" />
                            <Setter TargetName="Outline" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="State" Value="Half">
                            <Setter TargetName="Half" Property="Visibility" Value="Visible" />
                            <Setter TargetName="Outline" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <!--
                            Improve: Add hover effect on item itself? No, DFRating control handles hover logic.
                            But we could add a slight scale animation for fun.
                        -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform CenterX="{Binding Width, RelativeSource={RelativeSource Self}, Converter={x:Null}}" CenterY="{Binding Height, RelativeSource={RelativeSource Self}, Converter={x:Null}}" ScaleX="1.2" ScaleY="1.2" />
                                    <!--  Requires Center binding logic which is complex in style. Skip scale for simplicity/stability.  -->
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  DFRating Style  -->
    <Style TargetType="{x:Type controls:DFRating}">
        <Setter Property="Background" Value="Transparent" />
        <!--  Default to Warning color (Gold) but allow override  -->
        <Setter Property="Foreground" Value="{DynamicResource DF_Warning_Brush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DFRating}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <StackPanel x:Name="PART_StarsPanel" Orientation="Horizontal" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsReadOnly" Value="True">
                            <Setter Property="Cursor" Value="Arrow" />
                            <Setter Property="Opacity" Value="0.8" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
