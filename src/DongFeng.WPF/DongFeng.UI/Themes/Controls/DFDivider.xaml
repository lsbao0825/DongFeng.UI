<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DongFeng.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DongFeng.UI;component/Themes/BaseStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:DFDivider}">
        <Setter Property="Foreground" Value="{DynamicResource DF_Text_Primary_Brush}" />
        <Setter Property="Background" Value="{DynamicResource DF_Border_Brush}" />
        <!--  Line Color  -->
        <Setter Property="BorderThickness" Value="1" />
        <!--  Line Thickness  -->
        <Setter Property="Padding" Value="12,0" />
        <Setter Property="Margin" Value="0,12" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DFDivider}">
                    <Grid SnapsToDevicePixels="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  Horizontal Template Logic (Default)  -->
                        <!--  Left Line  -->
                        <Border
                            x:Name="LeftLine"
                            Grid.Row="1"
                            Grid.Column="0"
                            Height="{TemplateBinding BorderThickness}"
                            VerticalAlignment="Center"
                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="True" />

                        <!--  Content  -->
                        <ContentPresenter
                            x:Name="Content"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="{TemplateBinding Padding}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            TextBlock.Foreground="{TemplateBinding Foreground}" />

                        <!--  Right Line  -->
                        <Border
                            x:Name="RightLine"
                            Grid.Row="1"
                            Grid.Column="2"
                            Height="{TemplateBinding BorderThickness}"
                            VerticalAlignment="Center"
                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="True" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!--  Vertical Orientation Support  -->
                        <Trigger Property="Orientation" Value="Vertical">
                            <Setter Property="Margin" Value="12,0" />
                            <Setter Property="Padding" Value="0,12" />
                            <Setter TargetName="LeftLine" Property="Grid.Column" Value="1" />
                            <Setter TargetName="LeftLine" Property="Grid.Row" Value="0" />
                            <Setter TargetName="LeftLine" Property="Width" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=BorderThickness.Left}" />
                            <!--  Tricky to bind thickness to double  -->
                            <Setter TargetName="LeftLine" Property="Width" Value="1" />
                            <Setter TargetName="LeftLine" Property="Height" Value="Auto" />
                            <Setter TargetName="LeftLine" Property="HorizontalAlignment" Value="Center" />
                            <Setter TargetName="LeftLine" Property="VerticalAlignment" Value="Stretch" />

                            <Setter TargetName="RightLine" Property="Grid.Column" Value="1" />
                            <Setter TargetName="RightLine" Property="Grid.Row" Value="2" />
                            <Setter TargetName="RightLine" Property="Width" Value="1" />
                            <Setter TargetName="RightLine" Property="Height" Value="Auto" />
                            <Setter TargetName="RightLine" Property="HorizontalAlignment" Value="Center" />
                            <Setter TargetName="RightLine" Property="VerticalAlignment" Value="Stretch" />
                        </Trigger>

                        <!--  Content Alignment Logic  -->
                        <!--  If Left Aligned  -->
                        <Trigger Property="HorizontalContentAlignment" Value="Left">
                            <Setter TargetName="LeftLine" Property="Width" Value="24" />
                            <Setter TargetName="LeftLine" Property="HorizontalAlignment" Value="Left" />
                        </Trigger>
                        <Trigger Property="HorizontalContentAlignment" Value="Right">
                            <Setter TargetName="RightLine" Property="Width" Value="24" />
                            <Setter TargetName="RightLine" Property="HorizontalAlignment" Value="Right" />
                        </Trigger>

                        <!--  If No Content  -->
                        <Trigger Property="HasContent" Value="False">
                            <Setter TargetName="Content" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="Content" Property="Margin" Value="0" />
                            <Setter TargetName="LeftLine" Property="Grid.ColumnSpan" Value="3" />
                            <Setter TargetName="RightLine" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

