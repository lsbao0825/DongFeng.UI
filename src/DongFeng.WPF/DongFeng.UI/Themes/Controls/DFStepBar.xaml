<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DongFeng.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DongFeng.UI;component/Themes/BaseStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:DFStepBarItem}">
        <Setter Property="Foreground" Value="{DynamicResource Brush_Text_Primary}" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="MinWidth" Value="80" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DFStepBarItem}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <!--  Use standard Grid to allow lines to stretch fully  -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Connecting Line (Left)  -->
                            <Border
                                x:Name="LineLeft"
                                Grid.Column="0"
                                Height="2"
                                VerticalAlignment="Center"
                                Background="{DynamicResource Brush_Border}" />

                            <!--  Connecting Line (Right)  -->
                            <Border
                                x:Name="LineRight"
                                Grid.Column="2"
                                Height="2"
                                VerticalAlignment="Center"
                                Background="{DynamicResource Brush_Border}" />

                            <!--  Circle Indicator  -->
                            <Border
                                x:Name="Indicator"
                                Grid.Column="1"
                                Width="30"
                                Height="30"
                                Background="{DynamicResource Brush_Surface}"
                                BorderBrush="{DynamicResource Brush_Border}"
                                BorderThickness="2"
                                CornerRadius="{DynamicResource Radius_Circular}"
                                Cursor="Hand"
                                Panel.ZIndex="1">
                                <TextBlock
                                    x:Name="IndexText"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Text="{TemplateBinding Index}" />
                            </Border>
                        </Grid>

                        <!--  Content  -->
                        <ContentPresenter
                            Grid.Row="1"
                            Margin="0,8,0,0"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            TextBlock.Foreground="{TemplateBinding Foreground}" />

                    </Grid>
                    <ControlTemplate.Triggers>
                        <!--  First Item: Hide Left Line  -->
                        <!--  We check if previous data is null. If so, it's first.  -->
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource PreviousData}}" Value="{x:Null}">
                            <Setter TargetName="LineLeft" Property="Visibility" Value="Hidden" />
                        </DataTrigger>

                        <!--  Last Item: Hide Right Line  -->
                        <!--  Use the IsLast property we added  -->
                        <Trigger Property="IsLast" Value="True">
                            <Setter TargetName="LineRight" Property="Visibility" Value="Hidden" />
                        </Trigger>

                        <!--  Status: Active  -->
                        <Trigger Property="Status" Value="Active">
                            <Setter TargetName="Indicator" Property="Background" Value="{DynamicResource Brush_Primary}" />
                            <Setter TargetName="Indicator" Property="BorderBrush" Value="{DynamicResource Brush_Primary}" />
                            <Setter TargetName="IndexText" Property="Foreground" Value="#FFFFFF" />
                            <Setter TargetName="LineLeft" Property="Background" Value="{DynamicResource Brush_Primary}" />
                        </Trigger>

                        <!--  Status: Complete  -->
                        <Trigger Property="Status" Value="Complete">
                            <Setter TargetName="Indicator" Property="Background" Value="Transparent" />
                            <Setter TargetName="Indicator" Property="BorderBrush" Value="{DynamicResource Brush_Primary}" />
                            <Setter TargetName="IndexText" Property="Foreground" Value="{DynamicResource Brush_Primary}" />
                            <!--  Replace number with checkmark  -->
                            <Setter TargetName="IndexText" Property="Text" Value="âœ”" />
                            <Setter TargetName="LineLeft" Property="Background" Value="{DynamicResource Brush_Primary}" />
                            <!--  Fill right line only if next item is active or complete (not strictly checking next here, but usually if I am complete, I fill right)  -->
                            <!--  Actually, usually complete fills the line to the NEXT step.  -->
                            <Setter TargetName="LineRight" Property="Background" Value="{DynamicResource Brush_Primary}" />
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type controls:DFStepBar}">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <!--  Use UniformGrid to ensure items take equal width and lines connect  -->
                    <UniformGrid Rows="1" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DFStepBar}">
                    <Border
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ItemsPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
