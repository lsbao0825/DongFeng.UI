<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DongFeng.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DongFeng.UI;component/Themes/BaseStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  DescriptionItem Style  -->
    <Style TargetType="{x:Type controls:DescriptionItem}">
        <Setter Property="Margin" Value="0,0,0,16" />
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DescriptionItem}">
                    <Grid x:Name="RootGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <!--  Label  -->
                            <RowDefinition Height="Auto" />
                            <!--  Content  -->
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <!--  Label  -->
                            <ColumnDefinition Width="*" />
                            <!--  Content  -->
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            x:Name="LabelText"
                            Margin="0,0,8,0"
                            FontSize="14"
                            Foreground="{DynamicResource DF_Text_Secondary_Brush}"
                            Text="{TemplateBinding Label}" />

                        <ContentPresenter
                            x:Name="ContentPresenter"
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            TextBlock.FontSize="14"
                            TextBlock.Foreground="{DynamicResource DF_Text_Primary_Brush}" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!--  Horizontal (Default)  -->
                        <Trigger Property="Orientation" Value="Horizontal">
                            <Setter TargetName="LabelText" Property="Grid.Row" Value="0" />
                            <Setter TargetName="LabelText" Property="Grid.Column" Value="0" />
                            <Setter TargetName="LabelText" Property="Margin" Value="0,0,8,0" />
                            <Setter TargetName="LabelText" Property="VerticalAlignment" Value="Center" />

                            <Setter TargetName="ContentPresenter" Property="Grid.Row" Value="0" />
                            <Setter TargetName="ContentPresenter" Property="Grid.Column" Value="1" />
                            <Setter TargetName="ContentPresenter" Property="VerticalAlignment" Value="Center" />
                        </Trigger>
                        <!--  Vertical  -->
                        <Trigger Property="Orientation" Value="Vertical">
                            <Setter TargetName="LabelText" Property="Grid.Row" Value="0" />
                            <Setter TargetName="LabelText" Property="Grid.Column" Value="0" />
                            <Setter TargetName="LabelText" Property="Grid.ColumnSpan" Value="2" />
                            <Setter TargetName="LabelText" Property="Margin" Value="0,0,0,4" />

                            <Setter TargetName="ContentPresenter" Property="Grid.Row" Value="1" />
                            <Setter TargetName="ContentPresenter" Property="Grid.Column" Value="0" />
                            <Setter TargetName="ContentPresenter" Property="Grid.ColumnSpan" Value="2" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  DFDescriptionList Style  -->
    <Style TargetType="{x:Type controls:DFDescriptionList}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                    <!--  Or UniformGrid for fixed columns  -->
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style BasedOn="{StaticResource {x:Type controls:DescriptionItem}}" TargetType="{x:Type controls:DescriptionItem}">
                    <Setter Property="Width" Value="200" />
                    <!--  Default Width for WrapPanel item  -->
                    <Setter Property="Margin" Value="0,0,20,16" />
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DFDescriptionList}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ItemsPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>