<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="DFCard" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource DF_Surface_Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource DF_Border_Brush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{DynamicResource DF_CornerRadius_Medium}" />
        <Setter Property="Padding" Value="{DynamicResource DF_Spacing_Medium}" />
    </Style>

</ResourceDictionary>
