<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DongFeng.UI.Controls"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DongFeng.UI;component/Themes/BaseStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:Pagination}">
        <Setter Property="Foreground" Value="{DynamicResource Brush_Text_Primary}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:Pagination}">
                    <StackPanel Orientation="Horizontal">
                        <!--  Previous  -->
                        <Button
                            x:Name="PART_FirstPageButton"
                            Width="30"
                            Height="30"
                            Margin="2,0"
                            Content="«"
                            FontSize="16"
                            FontWeight="Bold"
                            Style="{DynamicResource DFButton}" />
                        <Button
                            x:Name="PART_PreviousPageButton"
                            Width="30"
                            Height="30"
                            Margin="2,0"
                            Content="‹"
                            FontSize="16"
                            FontWeight="Bold"
                            Style="{DynamicResource DFButton}" />

                        <!--  Current Page Info  -->
                        <StackPanel
                            Margin="10,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="{TemplateBinding Foreground}"
                                Text="Page" />
                            <TextBox
                                x:Name="PART_PageInput"
                                MinWidth="30"
                                Margin="5,0"
                                HorizontalContentAlignment="Center"
                                Text="{Binding CurrentPage, RelativeSource={RelativeSource TemplatedParent}, Mode=OneWay}" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="{TemplateBinding Foreground}"
                                Text="/" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Foreground="{TemplateBinding Foreground}"
                                Text="{Binding TotalPages, RelativeSource={RelativeSource TemplatedParent}}" />
                        </StackPanel>

                        <!--  Next  -->
                        <Button
                            x:Name="PART_NextPageButton"
                            Width="30"
                            Height="30"
                            Margin="2,0"
                            Content="›"
                            FontSize="16"
                            FontWeight="Bold"
                            Style="{DynamicResource DFButton}" />
                        <Button
                            x:Name="PART_LastPageButton"
                            Width="30"
                            Height="30"
                            Margin="2,0"
                            Content="»"
                            FontSize="16"
                            FontWeight="Bold"
                            Style="{DynamicResource DFButton}" />
                            
                        <!-- Page Size Changer (Optional) -->
                        <!-- Simple ComboBox to select 10, 20, 50, 100 -->
                        <ComboBox x:Name="PART_PageSizeComboBox"
                                  Margin="10,0,0,0"
                                  Width="70"
                                  SelectedValue="{Binding PageSize, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                  SelectedValuePath="Content">
                            <ComboBoxItem Content="10" />
                            <ComboBoxItem Content="20" />
                            <ComboBoxItem Content="50" />
                            <ComboBoxItem Content="100" />
                        </ComboBox>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
