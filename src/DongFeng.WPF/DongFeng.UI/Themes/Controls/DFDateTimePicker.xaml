<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DongFeng.UI.Controls"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DongFeng.UI;component/Themes/BaseStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  Shared ListBox Style for Time Picker  -->
    <Style x:Key="TimeListBoxItem" TargetType="ListBoxItem">
        <Setter Property="Foreground" Value="{DynamicResource DF_Popup_Foreground}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border
                        x:Name="Bd"
                        Padding="6,2"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        SnapsToDevicePixels="true">
                        <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource DF_Popup_Background}" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="true">
                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource DF_Input_Border_Focus}" />
                            <Setter Property="Foreground" Value="#FFFFFF" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TimeListBox" TargetType="ListBox">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Hidden" />
        <Setter Property="ItemContainerStyle" Value="{StaticResource TimeListBoxItem}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBox">
                    <Border
                        Name="Bd"
                        Margin="{DynamicResource DF_Margin_Small}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Cursor="Hand"
                        SnapsToDevicePixels="true">
                        <ScrollViewer Padding="{TemplateBinding Padding}" Focusable="false">
                            <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource DFInputBase}" TargetType="{x:Type controls:DFDateTimePicker}">
        <Setter Property="MinHeight" Value="0" />
        <Setter Property="Background" Value="{DynamicResource DF_Input_Background}" />
        <Setter Property="BorderBrush" Value="{DynamicResource DF_Input_Border}" />
        <Setter Property="Foreground" Value="{DynamicResource DF_Popup_Foreground}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DFDateTimePicker}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{DynamicResource DF_CornerRadius_Small}">
                        <Grid>
                            <!--  Input Box  -->
                            <Button
                                x:Name="PART_Button"
                                Margin="{TemplateBinding Margin}"
                                Padding="{TemplateBinding Padding}"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="{DynamicResource DF_CornerRadius_Small}">
                                            <Grid Margin="{TemplateBinding Padding}" Background="Transparent">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Margin="8,0"
                                                    VerticalAlignment="Center"
                                                    Foreground="{TemplateBinding Foreground}"
                                                    Text="{Binding SelectedDate, RelativeSource={RelativeSource AncestorType=controls:DFDateTimePicker}, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}, TargetNullValue='Select Date...'}" />

                                                <!--  Icon  -->
                                                <Path
                                                    Grid.Column="1"
                                                    Width="12"
                                                    Height="12"
                                                    Margin="0"
                                                    Data="M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V8H19V19Z"
                                                    Fill="{DynamicResource DF_Text_Secondary_Brush}"
                                                    Stretch="Uniform" />
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <!--  Popup  -->
                            <Popup
                                x:Name="PART_Popup"
                                AllowsTransparency="True"
                                IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                Placement="Bottom"
                                StaysOpen="False">
                                <Border
                                    Margin="5"
                                    Background="{DynamicResource DF_Popup_Background}"
                                    BorderBrush="{DynamicResource DF_Input_Border}"
                                    BorderThickness="1"
                                    CornerRadius="{DynamicResource DF_CornerRadius_Medium}"
                                    Effect="{DynamicResource Shadow_Depth1}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Calendar  -->
                                        <Calendar
                                            x:Name="PART_Calendar"
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="5"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            FontSize="{TemplateBinding FontSize}"
                                            Foreground="{DynamicResource DF_Popup_Foreground}" />

                                        <!--  Time Picker Section  -->
                                        <Border
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Height="{Binding ElementName=PART_Calendar, Path=ActualHeight}"
                                            Margin="0,5,5,5"
                                            BorderBrush="{DynamicResource DF_Input_Border}"
                                            BorderThickness="1,0,0,0">
                                            <Grid Margin="5,0,0,0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    Foreground="{DynamicResource DF_Popup_Foreground}"
                                                    Text="Time" />

                                                <Grid Grid.Row="1" Margin="0,5,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <ListBox
                                                        x:Name="PART_HourList"
                                                        Grid.Column="0"
                                                        BorderThickness="0,0,1,0"
                                                        FontSize="12"
                                                        Style="{StaticResource TimeListBox}" />
                                                    <ListBox
                                                        x:Name="PART_MinuteList"
                                                        Grid.Column="1"
                                                        BorderThickness="0,0,1,0"
                                                        FontSize="12"
                                                        Style="{StaticResource TimeListBox}" />
                                                    <ListBox
                                                        x:Name="PART_SecondList"
                                                        Grid.Column="2"
                                                        FontSize="12"
                                                        Style="{StaticResource TimeListBox}" />
                                                </Grid>
                                            </Grid>
                                        </Border>

                                        <!--  OK Button  -->
                                        <Button
                                            x:Name="PART_OkButton"
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            Margin="5"
                                            Content="OK"
                                            Style="{DynamicResource DFPrimaryButton}" />
                                    </Grid>
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

