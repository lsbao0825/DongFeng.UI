<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DongFeng.UI.Controls"
    xmlns:converters="clr-namespace:DongFeng.UI.Converters"
    xmlns:helpers="clr-namespace:DongFeng.UI.Helpers">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DongFeng.UI;component/Themes/BaseStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <converters:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter" />

    <Style
        x:Key="DFPasswordBox"
        BasedOn="{StaticResource DFInputBase}"
        TargetType="PasswordBox">
        <Setter Property="PasswordChar" Value="â—" />
        <Setter Property="helpers:PasswordBoxAttach.IsMonitoring" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Grid>
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{Binding Path=(helpers:ControlAttach.CornerRadius), RelativeSource={RelativeSource TemplatedParent}}"
                            SnapsToDevicePixels="True" />

                        <Grid Margin="{TemplateBinding Padding}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Left Icon  -->
                            <ContentPresenter
                                x:Name="PART_Icon"
                                Grid.Column="0"
                                Margin="4,0,6,0"
                                VerticalAlignment="Center"
                                Content="{Binding Path=(helpers:ControlAttach.Icon), RelativeSource={RelativeSource TemplatedParent}}"
                                TextElement.Foreground="{TemplateBinding Foreground}"
                                Visibility="{Binding Path=(helpers:ControlAttach.Icon), RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ObjectToVisibilityConverter}}" />

                            <!--  Content Host  -->
                            <Grid x:Name="ContentArea" Grid.Column="1">
                                <ScrollViewer
                                    x:Name="PART_ContentHost"
                                    VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                    Focusable="false"
                                    HorizontalScrollBarVisibility="Hidden"
                                    VerticalScrollBarVisibility="Hidden" />

                                <!--  TextBox for Revealed Password (Hidden by default)  -->
                                <TextBox
                                    x:Name="RevealedPasswordBox"
                                    Padding="0"
                                    HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CaretBrush="{DynamicResource DF_Input_Border_Focus}"
                                    Foreground="{TemplateBinding Foreground}"
                                    Text="{Binding Path=(helpers:PasswordBoxAttach.Password), RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                    Visibility="Collapsed" />
                            </Grid>

                            <!--  Watermark (Overlaid on ContentHost)  -->
                            <TextBlock
                                x:Name="Watermark"
                                Grid.Column="1"
                                Margin="2,0,0,0"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Foreground="{DynamicResource DF_Input_Placeholder}"
                                IsHitTestVisible="False"
                                Text="{Binding Path=(helpers:ControlAttach.Watermark), RelativeSource={RelativeSource TemplatedParent}}"
                                Visibility="Collapsed" />
                            <!--
                                Note: Pure PasswordBox cannot toggle reveal easily without code-behind or attached behavior swapping to TextBox.
                                For now, we'll add the visual button, but the logic requires PasswordBoxAttach helper update.
                            -->
                            <ToggleButton
                                x:Name="PART_Eye"
                                Grid.Column="2"
                                Width="20"
                                Height="20"
                                Margin="4,0,0,0"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Focusable="False"
                                IsChecked="{Binding Path=(helpers:PasswordBoxAttach.IsPasswordRevealed), RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                Visibility="{Binding Path=(helpers:PasswordBoxAttach.ShowEyeButton), RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Grid Background="Transparent">
                                            <!--  Eye Icon (Visible)  -->
                                            <Path
                                                x:Name="EyePath"
                                                Width="16"
                                                Height="16"
                                                Data="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z"
                                                Fill="{DynamicResource DF_Text_Secondary_Brush}"
                                                Stretch="Uniform" />
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <!--
                                                    Eye Off Icon (Hidden/Masked - wait, logic is inverted usually: Checked = Revealed = Eye Open? Or Checked = Masked?)
                                                    Usually: Default is Masked (Eye with Slash or just Eye). Click -> Revealed (Eye Open).
                                                    Let's assume IsChecked=True means REVEALED.
                                                    So unchecked (default) should show 'Eye' (click to reveal).
                                                    Checked should show 'Eye Off' (click to hide).
                                                -->
                                                <Setter TargetName="EyePath" Property="Data" Value="M11.83,9L15,12.16C15,12.11 15,12.05 15,12A3,3 0 0,0 12,9C11.94,9 11.89,9 11.83,9M7.53,9.8L9.08,11.35C9.03,11.56 9,11.77 9,12A3,3 0 0,0 12,15C12.22,15 12.44,14.97 12.65,14.92L14.2,16.47C13.53,16.8 12.79,17 12,17A5,5 0 0,1 7,12C7,11.21 7.2,10.47 7.53,9.8M2,4.27L4.28,6.55L4.73,7C3.08,8.3 1.78,10 1,12C2.73,16.39 7,19.5 12,19.5C13.55,19.5 15.03,19.2 16.38,18.66L16.81,19.08L19.73,22L21,20.73L3.27,3M12,7A5,5 0 0,1 17,12C17,12.64 16.87,13.26 16.64,13.82L19.57,16.75C21.07,15.5 22.27,13.86 23,12C21.27,7.61 17,4.5 12,4.5C10.6,4.5 9.27,4.73 8,5.16L10.1,7.26C10.7,7.09 11.34,7 12,7Z" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="EyePath" Property="Fill" Value="{DynamicResource DF_Input_Border_Focus}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                        </Grid>

                        <!--  TextBox for Revealed Password (Hidden by default)  -->
                        <!--  Removed from outside grid  -->

                    </Grid>
                    <ControlTemplate.Triggers>
                        <!--  Icon Logic replaced by Binding  -->

                        <!--  Reveal Password Logic  -->
                        <Trigger Property="helpers:PasswordBoxAttach.IsPasswordRevealed" Value="True">
                            <Setter TargetName="PART_ContentHost" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="RevealedPasswordBox" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <!--  Watermark Logic  -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="helpers:PasswordBoxAttach.HasText" Value="False" />
                                <Condition Property="IsKeyboardFocused" Value="False" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Watermark" Property="Visibility" Value="Visible" />
                        </MultiTrigger>

                        <!--  Focus Styles  -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource DF_Input_Border_Focus}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{Binding Path=(helpers:ControlAttach.FocusBorderBrush), RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect
                                        BlurRadius="5"
                                        Opacity="0.3"
                                        ShadowDepth="0"
                                        Color="#18a058" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>