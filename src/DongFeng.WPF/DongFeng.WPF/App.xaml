<Application
    x:Class="DongFeng.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DongFeng"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Order matters for ThemeManager replacement logic  -->
                <!--  1. Palette (Can be swapped)  -->
                <ResourceDictionary Source="pack://application:,,,/DongFeng.UI;component/Themes/Colors.xaml" />
                
                <!--  2. Theme (Light/Dark, Can be swapped)  -->
                <ResourceDictionary Source="pack://application:,,,/DongFeng.UI;component/Themes/Theme.Light.xaml" />
                
                <!--  3. Base Resources (Static)  -->
                <ResourceDictionary Source="pack://application:,,,/DongFeng.UI;component/Themes/Sizes.xaml" />
                <ResourceDictionary Source="pack://application:,,,/DongFeng.UI;component/Themes/BaseStyles.xaml" />
                
                <!--  4. Controls & Styles (Depend on above)  -->
                <ResourceDictionary Source="pack://application:,,,/DongFeng.UI;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>