<controls:DFWindow
    x:Class="DongFeng.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DongFeng.UI.Controls;assembly=DongFeng.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:DongFeng.UI.Helpers;assembly=DongFeng.UI"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="DongFeng Gallery"
    Width="1200"
    Height="800"
    DFLoadingCancelled="MainDFLoading_Cancel"
    Style="{StaticResource DFWindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <controls:DFWindow.TitleBarContent>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button
                Margin="0,0,10,0"
                Click="BtnOpenDFDrawer_Click"
                Content="Settings DFDrawer" />
            <TextBlock
                Margin="0,0,20,0"
                VerticalAlignment="Center"
                Foreground="{DynamicResource DF_Text_Secondary_Brush}"
                Text="| DF UI Style" />

            <Menu
                Margin="0"
                Padding="0"
                VerticalAlignment="Center"
                Style="{DynamicResource DFTitleBarMenu}">
                <MenuItem Header="File">
                    <MenuItem Header="New" InputGestureText="Ctrl+N" />
                    <MenuItem Header="Open" InputGestureText="Ctrl+O" />
                    <Separator />
                    <MenuItem Header="Exit" />
                </MenuItem>
                <MenuItem Header="Help" />
            </Menu>
        </StackPanel>
    </controls:DFWindow.TitleBarContent>

    <Grid Margin="{DynamicResource Spacing_Large}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header Area  -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock
                    FontSize="{DynamicResource DF_Header_FontSize}"
                    FontWeight="Bold"
                    Foreground="{DynamicResource DF_Primary_Brush}"
                    Text="Component Gallery" />
                <TextBlock
                    Margin="0,5,0,0"
                    Foreground="{DynamicResource DF_Text_Secondary_Brush}"
                    Text="Explore the DF UI WPF components." />
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ComboBox
                    x:Name="PaletteSelector"
                    Width="120"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    SelectionChanged="PaletteSelector_SelectionChanged" />
                <controls:DFToggleSwitch
                    x:Name="ThemeToggle"
                    Checked="ThemeToggle_Checked"
                    Content="Dark Mode"
                    Unchecked="ThemeToggle_Unchecked" />
            </StackPanel>
        </Grid>

        <!--  Main Content Tabs  -->
        <TabControl Grid.Row="1" BorderThickness="0">

            <!--  Tab: New Components  -->
            <TabItem Header="New">
                <ScrollViewer Padding="0,20,20,20" VerticalScrollBarVisibility="Auto">
                    <controls:DFUniformGrid>
                        <controls:DFCodeExample Code="&lt;controls:DFBreadcrumbBar Separator=&quot; / &quot;&gt;&#xA;    &lt;sys:String&gt;Home&lt;/sys:String&gt;&#xA;    &lt;sys:String&gt;Section&lt;/sys:String&gt;&#xA;    &lt;sys:String&gt;Page&lt;/sys:String&gt;&#xA;&lt;/controls:DFBreadcrumbBar&gt;" Header="Breadcrumb Navigation">
                            <controls:DFBreadcrumbBar>
                                <sys:String>Home</sys:String>
                                <sys:String>UI Components</sys:String>
                                <sys:String>New Features</sys:String>
                            </controls:DFBreadcrumbBar>
                        </controls:DFCodeExample>

                        <controls:DFCodeExample Code="&lt;controls:DFAvatar Text=&quot;JD&quot; /&gt;&#xA;&lt;controls:DFAvatar&gt;...&lt;Icon /&gt;...&lt;/controls:DFAvatar&gt;&#xA;&lt;controls:DFAvatar Source=&quot;...&quot; /&gt;" Header="DFAvatar">
                            <StackPanel Orientation="Horizontal">
                                <controls:DFAvatar
                                    Margin="0,0,20,0"
                                    Text="A"
                                    ToolTip="Text Fallback" />
                                <controls:DFAvatar
                                    Margin="0,0,20,0"
                                    Background="#2080f0"
                                    Foreground="White"
                                    ToolTip="Icon DFAvatar">
                                    <controls:DFAvatar.Icon>
                                        <iconPacks:PackIconMaterial
                                            Width="24"
                                            Height="24"
                                            Kind="Account" />
                                    </controls:DFAvatar.Icon>
                                </controls:DFAvatar>
                                <controls:DFAvatar
                                    Margin="0,0,20,0"
                                    CornerRadius="4"
                                    Text="SQ"
                                    ToolTip="Square Radius" />
                            </StackPanel>
                        </controls:DFCodeExample>

                        <controls:DFCodeExample Code="&lt;controls:DFBadge Value=&quot;5&quot;&gt;...&lt;/controls:DFBadge&gt;&#xA;&lt;controls:DFBadge Value=&quot;100&quot; Maximum=&quot;99&quot;&gt;...&lt;/controls:DFBadge&gt;&#xA;&lt;controls:DFBadge IsDot=&quot;True&quot;&gt;...&lt;/controls:DFBadge&gt;" Header="DFBadge">
                            <controls:DFUniformGrid
                                Margin="0,10,0,0"
                                VerticalAlignment="Top"
                                Columns="1">
                                <controls:DFBadge Margin="0,0,30,0" Value="5">
                                    <Button Content="Messages" />
                                </controls:DFBadge>

                                <controls:DFBadge
                                    Margin="0,0,30,0"
                                    Maximum="99"
                                    Value="120">
                                    <Button Content="Emails" />
                                </controls:DFBadge>

                                <controls:DFBadge Margin="0,0,30,0" IsDot="True">
                                    <Button Content="Updates" />
                                </controls:DFBadge>
                            </controls:DFUniformGrid>
                        </controls:DFCodeExample>

                        <controls:DFCodeExample Code="&lt;controls:DFColorPicker /&gt;" Header="Color Picker">
                            <controls:DFColorPicker HorizontalAlignment="Left" />
                        </controls:DFCodeExample>
                    </controls:DFUniformGrid>
                </ScrollViewer>
            </TabItem>

            <!--  Tab: Buttons & Icons  -->
            <TabItem Header="Basic">
                <ScrollViewer Padding="0,20,20,20" VerticalScrollBarVisibility="Auto">
                    <controls:DFUniformGrid>
                        <controls:DFCodeExample Code="&lt;Button Content=&quot;Default Button&quot; /&gt;&#xA;&lt;Button Content=&quot;Primary Button&quot; Style=&quot;{DynamicResource DFPrimaryButton}&quot; /&gt;&#xA;&lt;Button Content=&quot;Disabled&quot; IsEnabled=&quot;False&quot; /&gt;" Header="Standard Buttons">
                            <WrapPanel>
                                <Button Margin="0,0,10,10" Content="Default Button" />
                                <Button
                                    Margin="0,0,10,10"
                                    Content="Primary Button"
                                    Style="{DynamicResource DFPrimaryButton}" />
                                <Button
                                    Margin="0,0,10,10"
                                    Content="Disabled"
                                    IsEnabled="False" />
                            </WrapPanel>
                        </controls:DFCodeExample>

                        <controls:DFCodeExample Code="&lt;Button Content=&quot;Search&quot; Style=&quot;{DynamicResource DFPrimaryButton}&quot;&gt;&#xA;    &lt;helpers:ControlAttach.Icon&gt;&#xA;        &lt;iconPacks:PackIconMaterial Kind=&quot;Magnify&quot; /&gt;&#xA;    &lt;/helpers:ControlAttach.Icon&gt;&#xA;&lt;/Button&gt;&#xA;&#xA;&lt;Button Style=&quot;{DynamicResource DFVerticalButton}&quot; Content=&quot;Save&quot;&gt;&#xA;    &lt;helpers:ControlAttach.Icon&gt;&#xA;        &lt;iconPacks:PackIconMaterial Kind=&quot;ContentSave&quot; Width=&quot;24&quot; Height=&quot;24&quot; /&gt;&#xA;    &lt;/helpers:ControlAttach.Icon&gt;&#xA;&lt;/Button&gt;" Header="Buttons with Icons">
                            <WrapPanel>
                                <Button
                                    Margin="0,0,10,10"
                                    Content="Search"
                                    Style="{DynamicResource DFPrimaryButton}">
                                    <helpers:ControlAttach.Icon>
                                        <iconPacks:PackIconMaterial Kind="Magnify" />
                                    </helpers:ControlAttach.Icon>
                                </Button>
                                <Button Margin="0,0,10,10" Content="Settings">
                                    <helpers:ControlAttach.Icon>
                                        <iconPacks:PackIconMaterial Kind="Cog" />
                                    </helpers:ControlAttach.Icon>
                                </Button>
                                <Button
                                    Margin="0,0,10,10"
                                    Content="Vertical Layout"
                                    Style="{DynamicResource DFVerticalButton}">
                                    <helpers:ControlAttach.Icon>
                                        <iconPacks:PackIconMaterial
                                            Width="24"
                                            Height="24"
                                            Kind="ViewDashboard" />
                                    </helpers:ControlAttach.Icon>
                                </Button>
                            </WrapPanel>
                        </controls:DFCodeExample>

                        <controls:DFCodeExample Code="&lt;controls:DFToggleSwitch Content=&quot;Switch me&quot; /&gt;&#xA;&lt;controls:DFToggleSwitch IsChecked=&quot;True&quot;&gt;&#xA;    &lt;controls:DFToggleSwitch.OnContent&gt;ON&lt;/controls:DFToggleSwitch.OnContent&gt;&#xA;    &lt;controls:DFToggleSwitch.OffContent&gt;OFF&lt;/controls:DFToggleSwitch.OffContent&gt;&#xA;&lt;/controls:DFToggleSwitch&gt;" Header="Toggle Switch">
                            <StackPanel Orientation="Horizontal">
                                <controls:DFToggleSwitch Margin="0,0,20,0" Content="Standard Switch" />
                                <controls:DFToggleSwitch Content="With State Text" IsChecked="True">
                                    <controls:DFToggleSwitch.OnContent>ON</controls:DFToggleSwitch.OnContent>
                                    <controls:DFToggleSwitch.OffContent>OFF</controls:DFToggleSwitch.OffContent>
                                </controls:DFToggleSwitch>
                            </StackPanel>
                        </controls:DFCodeExample>
                    </controls:DFUniformGrid>
                </ScrollViewer>
            </TabItem>

            <!--  Tab: Inputs  -->
            <TabItem Header="Inputs">
                <ScrollViewer Padding="0,20,20,20" VerticalScrollBarVisibility="Auto">
                    <controls:DFUniformGrid>
                        <controls:DFCodeExample Code="&lt;TextBox helpers:ControlAttach.Watermark=&quot;Enter text...&quot; /&gt;&#xA;&lt;TextBox helpers:ControlAttach.Watermark=&quot;With Icon&quot;&gt;&#xA;    &lt;helpers:ControlAttach.Icon&gt;&#xA;        &lt;iconPacks:PackIconMaterial Kind=&quot;Account&quot; /&gt;&#xA;    &lt;/helpers:ControlAttach.Icon&gt;&#xA;&lt;/TextBox&gt;" Header="TextBox">
                            <StackPanel>
                                <TextBox helpers:ControlAttach.Watermark="Enter text..." />
                                <TextBox helpers:ControlAttach.Watermark="With Icon">
                                    <helpers:ControlAttach.Icon>
                                        <iconPacks:PackIconMaterial
                                            Width="14"
                                            Height="14"
                                            Kind="Account" />
                                    </helpers:ControlAttach.Icon>
                                </TextBox>
                            </StackPanel>
                        </controls:DFCodeExample>

                        <controls:DFCodeExample Code="&lt;PasswordBox helpers:ControlAttach.Watermark=&quot;Password&quot; /&gt;" Header="PasswordBox">

                            <StackPanel>
                                <PasswordBox helpers:ControlAttach.Watermark="Password" />
                            </StackPanel>
                        </controls:DFCodeExample>

                        <controls:DFCodeExample Code="&lt;controls:DFNumericUpDown Value=&quot;5&quot; Maximum=&quot;10&quot; /&gt;&#xA;&lt;controls:DFDateTimePicker SelectedDate=&quot;{x:Static sys:DateTime.Now}&quot; /&gt;" Header="Numeric &amp; Date">
                            <controls:DFUniformGrid Columns="1">
                                <controls:DFNumericUpDown
                                    Maximum="100"
                                    Minimum="0"
                                    Value="10" />
                                <controls:DFDateTimePicker SelectedDate="{x:Static sys:DateTime.Now}" />
                            </controls:DFUniformGrid>
                        </controls:DFCodeExample>

                        <controls:DFCodeExample Header="Tag Input">
                            <controls:DFTagInput
                                x:Name="OrderTags"
                                Width="400"
                                HorizontalAlignment="Left" />
                        </controls:DFCodeExample>

                        <controls:DFCodeExample Code="&lt;controls:DFRating Value=&quot;3&quot; /&gt;&#xA;&lt;controls:DFRating IsReadOnly=&quot;True&quot; Value=&quot;4&quot; /&gt;" Header="DFRating">
                            <StackPanel Orientation="Horizontal">
                                <controls:DFRating Margin="0,0,20,0" Value="3" />
                                <controls:DFRating
                                    Margin="0,0,20,0"
                                    IsReadOnly="True"
                                    ToolTip="Read Only"
                                    Value="4" />
                                <controls:DFRating
                                    ItemSize="16"
                                    Maximum="10"
                                    ToolTip="Max 10, Small"
                                    Value="7" />
                            </StackPanel>
                        </controls:DFCodeExample>
                    </controls:DFUniformGrid>
                </ScrollViewer>
            </TabItem>

            <!--  Tab: Data  -->
            <TabItem Header="Data Display">
                <ScrollViewer>
                    <Grid Margin="0,20,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <!--  Examples  -->
                            <RowDefinition Height="*" />
                            <!--  DataGrid  -->
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  DFStatistic & DFDivider Examples  -->
                        <controls:DFUniformGrid Grid.Row="0" Margin="0,0,0,20">
                            <controls:DFCodeExample Header="DFStatistic">
                                <StackPanel Orientation="Horizontal">
                                    <controls:DFStatistic
                                        Margin="0,0,40,0"
                                        Label="Active Users"
                                        Value="1,234" />
                                    <controls:DFStatistic
                                        Margin="0,0,40,0"
                                        Foreground="#18a058"
                                        Label="Growth"
                                        Suffix="%"
                                        Value="12.5">
                                        <controls:DFStatistic.Icon>
                                            <iconPacks:PackIconMaterial
                                                Width="24"
                                                Height="24"
                                                Foreground="#18a058"
                                                Kind="ArrowUp" />
                                        </controls:DFStatistic.Icon>
                                    </controls:DFStatistic>
                                    <controls:DFStatistic
                                        Margin="0,0,40,0"
                                        Label="Revenue"
                                        Prefix="$"
                                        Value="9,876" />
                                </StackPanel>
                            </controls:DFCodeExample>

                            <controls:DFCodeExample Header="DFDivider">
                                <StackPanel>
                                    <controls:DFDivider />
                                    <controls:DFDivider Content="Center Text" />
                                    <controls:DFDivider HorizontalContentAlignment="Left" Content="Left Text" />
                                    <controls:DFDivider HorizontalContentAlignment="Right" Content="Right Text" />
                                </StackPanel>
                            </controls:DFCodeExample>

                            <controls:DFCodeExample Header="Description List">
                                <controls:DFDescriptionList>
                                    <controls:DescriptionItem Content="John Doe" Label="User" />
                                    <controls:DescriptionItem Content="Developer" Label="Role" />
                                    <controls:DescriptionItem Content="john@example.com" Label="Email" />
                                    <controls:DescriptionItem Content="Active" Label="Status" />
                                    <controls:DescriptionItem Content="New York, USA" Label="Location" />
                                    <controls:DescriptionItem Content="Frontend" Label="Team" />
                                </controls:DFDescriptionList>
                            </controls:DFCodeExample>
                        </controls:DFUniformGrid>

                        <controls:DFCodeExample
                            Grid.Row="1"
                            VerticalAlignment="Stretch"
                            Code="&lt;DataGrid ... /&gt;&#xA;&lt;controls:DFPagination TotalCount=&quot;100&quot; /&gt;"
                            Header="DataGrid with DFPagination">
                            <Grid Height="400">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                    <Button Content="Add New" Style="{DynamicResource DFPrimaryButton}" />
                                    <Button Margin="10,0,0,0" Content="Refresh" />
                                </StackPanel>

                                <DataGrid
                                    x:Name="UserDataGrid"
                                    Grid.Row="1"
                                    AutoGenerateColumns="False"
                                    HeadersVisibility="Column">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn
                                            Width="80"
                                            Binding="{Binding ID}"
                                            Header="ID" />
                                        <DataGridTextColumn
                                            Width="200"
                                            Binding="{Binding Name}"
                                            Header="Name" />
                                        <DataGridTextColumn
                                            Width="150"
                                            Binding="{Binding Status}"
                                            Header="Status" />
                                        <DataGridTextColumn
                                            Width="*"
                                            Binding="{Binding Date}"
                                            Header="Joined Date" />
                                    </DataGrid.Columns>
                                </DataGrid>

                                <controls:DFPagination
                                    Grid.Row="2"
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Right"
                                    CurrentPage="1"
                                    PageSize="10"
                                    TotalCount="100" />
                            </Grid>
                        </controls:DFCodeExample>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!--  Tab: Feedback  -->
            <TabItem Header="Feedback">
                <ScrollViewer Padding="0,20,20,20" VerticalScrollBarVisibility="Auto">
                    <controls:DFUniformGrid>
                        <controls:DFCodeExample Code="Message.Info(&quot;Info message&quot;);&#xA;Message.Success(&quot;Success message&quot;);&#xA;Message.Warning(&quot;Warning message&quot;);&#xA;Message.Error(&quot;Error message&quot;);" Header="Message (Toast)">
                            <WrapPanel>
                                <Button
                                    Margin="0,0,10,10"
                                    Click="BtnInfo_Click"
                                    Content="Info" />
                                <Button
                                    Margin="0,0,10,10"
                                    Click="BtnSuccess_Click"
                                    Content="Success" />
                                <Button
                                    Margin="0,0,10,10"
                                    Click="BtnWarn_Click"
                                    Content="Warning" />
                                <Button
                                    Margin="0,0,10,10"
                                    Click="BtnError_Click"
                                    Content="Error" />
                            </WrapPanel>
                        </controls:DFCodeExample>

                        <controls:DFCodeExample Code="&lt;controls:DFCircleProgressBar Value=&quot;75&quot; /&gt;" Header="Circle Progress">
                            <WrapPanel>
                                <controls:DFCircleProgressBar Margin="0,0,20,0" Value="25" />
                                <controls:DFCircleProgressBar
                                    Width="80"
                                    Height="80"
                                    Margin="0,0,20,0"
                                    IsPie="True"
                                    StrokeThickness="0"
                                    Value="75" />
                                <controls:DFCircleProgressBar
                                    Width="60"
                                    Height="60"
                                    Foreground="#18a058"
                                    StrokeThickness="4"
                                    Value="100" />
                            </WrapPanel>
                        </controls:DFCodeExample>

                        <controls:DFCodeExample Code="&lt;controls:DFSkeleton Width=&quot;200&quot; /&gt;" Header="DFSkeleton (DFLoading)">
                            <StackPanel>
                                <controls:DFSkeleton
                                    Width="100"
                                    Height="30"
                                    Margin="0,0,0,10" />
                                <controls:DFSkeleton Width="300" Margin="0,0,0,10" />
                                <controls:DFSkeleton Width="250" Margin="0,0,0,10" />
                                <StackPanel Orientation="Horizontal">
                                    <controls:DFSkeleton
                                        Width="50"
                                        Height="50"
                                        Margin="0,0,10,0"
                                        CornerRadius="25" />
                                    <StackPanel VerticalAlignment="Center">
                                        <controls:DFSkeleton Width="120" Margin="0,0,0,5" />
                                        <controls:DFSkeleton Width="80" Height="12" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </controls:DFCodeExample>

                        <controls:DFCodeExample Code="&lt;controls:DFCarousel AutoPlay=&quot;True&quot;&gt;...&lt;/controls:DFCarousel&gt;" Header="DFCarousel (Banner)">
                            <controls:DFCarousel Height="200" AutoPlay="True">
                                <controls:DFCarouselItem>
                                    <Grid Background="#18a058">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="32"
                                            Foreground="White"
                                            Text="Slide 1" />
                                    </Grid>
                                </controls:DFCarouselItem>
                                <controls:DFCarouselItem>
                                    <Grid Background="#2080f0">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="32"
                                            Foreground="White"
                                            Text="Slide 2" />
                                    </Grid>
                                </controls:DFCarouselItem>
                                <controls:DFCarouselItem>
                                    <Grid Background="#f0a020">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="32"
                                            Foreground="White"
                                            Text="Slide 3" />
                                    </Grid>
                                </controls:DFCarouselItem>
                            </controls:DFCarousel>
                        </controls:DFCodeExample>

                        <controls:DFCodeExample Code="var result = DFMessageBox.Show(&quot;Are you sure?&quot;, &quot;Confirm&quot;, MessageBoxButton.YesNo);" Header="Dialog (Modal)">
                            <Button Click="BtnDialog_Click" Content="Open Confirmation Dialog" />
                        </controls:DFCodeExample>

                        <controls:DFCodeExample Code="// Simple&#xA;await StartDFLoading(async () =&gt; await Task.Delay(2000), &quot;DFLoading...&quot;);&#xA;&#xA;// Cancellable&#xA;await StartDFLoading(async (ct) =&gt; await Task.Delay(5000, ct), &quot;Processing...&quot;, true);" Header="DFLoading (Async Tasks)">
                            <WrapPanel>
                                <Button
                                    Margin="0,0,10,10"
                                    Click="BtnLoadSimple_Click"
                                    Content="Simple (2s)" />
                                <Button
                                    Margin="0,0,10,10"
                                    Click="BtnLoadCancel_Click"
                                    Content="Cancellable (5s)" />
                                <Button
                                    Margin="0,0,10,10"
                                    Click="BtnLoadResult_Click"
                                    Content="With Result" />
                            </WrapPanel>
                        </controls:DFCodeExample>

                        <controls:DFCodeExample Code="&lt;controls:DFStepBar StepIndex=&quot;1&quot;&gt;&#xA;    &lt;controls:DFStepBarItem Content=&quot;Step 1&quot; /&gt;&#xA;    &lt;controls:DFStepBarItem Content=&quot;Step 2&quot; /&gt;&#xA;    &lt;controls:DFStepBarItem Content=&quot;Step 3&quot; /&gt;&#xA;&lt;/controls:DFStepBar&gt;" Header="Step Bar">
                            <controls:DFStepBar StepIndex="1">
                                <controls:DFStepBarItem Content="Step 1" />
                                <controls:DFStepBarItem Content="Step 2" />
                                <controls:DFStepBarItem Content="Step 3" />
                            </controls:DFStepBar>
                        </controls:DFCodeExample>
                    </controls:DFUniformGrid>
                </ScrollViewer>
            </TabItem>

            <!--  Tab: Advanced (New)  -->
            <TabItem Header="Advanced">
                <ScrollViewer Padding="0,20,20,20" VerticalScrollBarVisibility="Auto">
                    <controls:DFUniformGrid>
                        <!--  DFTimeline  -->
                        <controls:DFCodeExample Code="&lt;controls:DFTimeline&gt;&#xA;    &lt;controls:DFTimelineItem Header=&quot;2023-10-01&quot; Content=&quot;Start&quot; Color=&quot;Green&quot;/&gt;&#xA;    &lt;controls:DFTimelineItem Content=&quot;Process&quot; LineType=&quot;Dashed&quot;/&gt;&#xA;&lt;/controls:DFTimeline&gt;" Header="DFTimeline">
                            <controls:DFTimeline>
                                <controls:DFTimelineItem
                                    Content="Project Started"
                                    Header="2023-10-01 09:00"
                                    Color="#18a058" />
                                <controls:DFTimelineItem
                                    Content="Design Review"
                                    Header="2023-10-02"
                                    LineType="Dashed" />
                                <controls:DFTimelineItem Content="Development" Header="2023-10-05" />
                                <controls:DFTimelineItem
                                    Content="Testing"
                                    Header="2023-10-10"
                                    Color="#f0a020" />
                                <controls:DFTimelineItem
                                    Content="Release"
                                    Header="2023-10-20"
                                    Color="#d03050" />
                            </controls:DFTimeline>
                        </controls:DFCodeExample>

                        <!--  DFRangeSlider  -->
                        <controls:DFCodeExample Code="&lt;controls:DFRangeSlider Minimum=&quot;0&quot; Maximum=&quot;100&quot; LowerValue=&quot;20&quot; UpperValue=&quot;80&quot;/&gt;" Header="Range Slider">
                            <StackPanel>
                                <controls:DFRangeSlider
                                    Width="300"
                                    Margin="0,0,0,20"
                                    HorizontalAlignment="Left"
                                    LowerValue="20"
                                    Maximum="100"
                                    Minimum="0"
                                    UpperValue="80" />
                                <controls:DFRangeSlider
                                    Width="300"
                                    HorizontalAlignment="Left"
                                    IsSnapToTickEnabled="True"
                                    LowerValue="10"
                                    Maximum="100"
                                    Minimum="0"
                                    TickFrequency="10"
                                    UpperValue="40" />
                                <TextBlock
                                    Margin="0,5,0,0"
                                    FontSize="12"
                                    Foreground="{DynamicResource DF_Text_Secondary_Brush}"
                                    Text="With Tick Snapping (10)" />
                            </StackPanel>
                        </controls:DFCodeExample>

                        <!--  DFPopover  -->
                        <controls:DFCodeExample Code="&lt;controls:DFPopover Title=&quot;Title&quot;&gt;&#xA;   &lt;Button Content=&quot;Click Me&quot;/&gt;&#xA;   &lt;controls:DFPopover.PopupContent&gt;...&lt;/controls:DFPopover.PopupContent&gt;&#xA;&lt;/controls:DFPopover&gt;" Header="DFPopover">
                            <WrapPanel>
                                <controls:DFPopover Title="User Details" Margin="0,0,20,0">
                                    <Button Content="Click Me (DFPopover)" Style="{DynamicResource DFPrimaryButton}" />
