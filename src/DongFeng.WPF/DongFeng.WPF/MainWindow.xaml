                                        <!--  Concentric Rings with different sizes  -->
                                        <controls:DFCircleProgressBar
                                            Width="200"
                                            Height="200"
                                            Foreground="#d03050"
                                            StrokeThickness="10"
                                            ToolTip="System: 85%"
                                            Value="85" />
                                        <controls:DFCircleProgressBar
                                            Width="160"
                                            Height="160"
                                            Foreground="#f0a020"
                                            StrokeThickness="10"
                                            ToolTip="Media: 60%"
                                            Value="60" />
                                        <controls:DFCircleProgressBar
                                            Width="120"
                                            Height="120"
                                            Foreground="#2080f0"
                                            StrokeThickness="10"
                                            ToolTip="Docs: 40%"
                                            Value="40" />

                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="{DynamicResource DF_Text_Secondary_Brush}"
                                                Text="Total" />
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="24"
                                                FontWeight="Bold"
                                                Foreground="{DynamicResource DF_Text_Primary_Brush}"
                                                Text="85%" />
                                        </StackPanel>
                                    </Grid>

                                    <!--  Legend on right  -->
                                    <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                                        <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                                            <Rectangle
                                                Width="12"
                                                Height="12"
                                                Margin="0,0,8,0"
                                                Fill="#d03050"
                                                RadiusX="2"
                                                RadiusY="2" />
                                            <TextBlock Foreground="{DynamicResource DF_Text_Secondary_Brush}" Text="System" />
                                        </StackPanel>
                                        <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                                            <Rectangle
                                                Width="12"
                                                Height="12"
                                                Margin="0,0,8,0"
                                                Fill="#f0a020"
                                                RadiusX="2"
                                                RadiusY="2" />
                                            <TextBlock Foreground="{DynamicResource DF_Text_Secondary_Brush}" Text="Media" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Rectangle
                                                Width="12"
                                                Height="12"
                                                Margin="0,0,8,0"
                                                Fill="#2080f0"
                                                RadiusX="2"
                                                RadiusY="2" />
                                            <TextBlock Foreground="{DynamicResource DF_Text_Secondary_Brush}" Text="Docs" />
                                        </StackPanel>
                                    </StackPanel>
                                </DockPanel>
                            </Border>
                        </Grid>

                        <!--  Recent Transactions  -->
                        <Border Padding="0" Style="{DynamicResource DFCard}">
                            <DockPanel>
                                <TextBlock
                                    Margin="20,20,20,10"
                                    DockPanel.Dock="Top"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Text="Recent Transactions" />
                                <DataGrid
                                    x:Name="DashboardDataGrid"
                                    Margin="0,10,0,0"
                                    AutoGenerateColumns="False"
                                    BorderThickness="0"
                                    HeadersVisibility="Column">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn
                                            Width="120"
                                            Binding="{Binding ID}"
                                            Header="Transaction ID" />
                                        <DataGridTextColumn
                                            Width="*"
                                            Binding="{Binding Name}"
                                            Header="Customer" />
                                        <DataGridTextColumn
                                            Width="120"
                                            Binding="{Binding Status}"
                                            Header="Status" />
                                        <DataGridTextColumn
                                            Width="150"
                                            Binding="{Binding Date}"
                                            Header="Date" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!--  Demo: Settings  -->
            <TabItem Header="Demo: Settings">
                <Grid Background="{DynamicResource DF_Background_Brush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border
                        Background="{DynamicResource DF_Surface_Brush}"
                        BorderBrush="{DynamicResource DF_Border_Brush}"
                        BorderThickness="0,0,1,0">
                        <StackPanel Margin="0,20,0,0">
                            <TextBlock
                                Margin="20,0,0,10"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="{DynamicResource DF_Text_Secondary_Brush}"
                                Text="SETTINGS" />
                            <ListBox
                                Background="Transparent"
                                BorderThickness="0"
                                SelectedIndex="0"
                                Style="{DynamicResource DFListBox}">
                                <ListBoxItem Padding="20,10" Content="General" />
                                <ListBoxItem Padding="20,10" Content="Account" />
                                <ListBoxItem Padding="20,10" Content="Appearance" />
                                <ListBoxItem Padding="20,10" Content="Privacy &amp; Security" />
                                <ListBoxItem Padding="20,10" Content="Notifications" />
                            </ListBox>
                        </StackPanel>
                    </Border>

                    <ScrollViewer Grid.Column="1" Padding="40">
                        <StackPanel MaxWidth="700" HorizontalAlignment="Left">
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="{DynamicResource DF_Text_Primary_Brush}"
                                Text="Account Settings" />
                            <TextBlock
                                Margin="0,0,0,30"
                                Foreground="{DynamicResource DF_Text_Secondary_Brush}"
                                Text="Manage your personal information and security." />

                            <controls:DFDivider
                                Margin="0,0,0,20"
                                HorizontalContentAlignment="Left"
                                Content="Profile" />

                            <Grid Margin="0,0,0,30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <controls:DFAvatar
                                    Width="80"
                                    Height="80"
                                    Margin="0,0,30,0"
                                    CornerRadius="40"
                                    FontSize="32"
                                    Text="JD" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                        <Button Margin="0,0,10,0" Content="Upload New Photo" />
                                        <Button
                                            Background="Transparent"
                                            BorderBrush="{DynamicResource DF_Border_Brush}"
                                            BorderThickness="1"
                                            Content="Remove"
                                            Foreground="{DynamicResource DF_Text_Secondary_Brush}" />
                                    </StackPanel>
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{DynamicResource DF_Text_Secondary_Brush}"
                                        Text="Recommended size: 256x256px. JPG, PNG allowed." />
                                </StackPanel>
                            </Grid>

                            <controls:DFUniformGrid
                                Margin="0,0,0,30"
                                ColumnSpacing="20"
                                Columns="2"
                                RowSpacing="20">
                                <controls:DescriptionItem Label="First Name" Orientation="Vertical">
                                    <TextBox Text="John" />
                                </controls:DescriptionItem>
                                <controls:DescriptionItem Label="Last Name" Orientation="Vertical">
                                    <TextBox Text="Doe" />
                                </controls:DescriptionItem>
                                <controls:DescriptionItem Label="Email Address" Orientation="Vertical">
                                    <TextBox Text="john.doe@example.com" />
                                </controls:DescriptionItem>
                                <controls:DescriptionItem Label="Phone Number" Orientation="Vertical">
                                    <TextBox Text="+1 (555) 123-4567" />
                                </controls:DescriptionItem>
                            </controls:DFUniformGrid>

                            <controls:DFDivider
                                Margin="0,10,0,20"
                                HorizontalContentAlignment="Left"
                                Content="Preferences" />

                            <StackPanel Margin="0,0,0,30">
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Text="Email Notifications" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            FontSize="12"
                                            Foreground="{DynamicResource DF_Text_Secondary_Brush}"
                                            Text="Receive daily summary emails about activity" />
                                    </StackPanel>
                                    <controls:DFToggleSwitch Grid.Column="1" IsChecked="True" />
                                </Grid>

                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Text="Two-Factor Authentication" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            FontSize="12"
                                            Foreground="{DynamicResource DF_Text_Secondary_Brush}"
                                            Text="Add an extra layer of security to your account" />
                                    </StackPanel>
                                    <controls:DFToggleSwitch Grid.Column="1" IsChecked="False" />
                                </Grid>

                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Text="Dark Mode" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            FontSize="12"
                                            Foreground="{DynamicResource DF_Text_Secondary_Brush}"
                                            Text="Use dark theme for the application interface" />
                                    </StackPanel>
                                    <controls:DFToggleSwitch Grid.Column="1" IsChecked="{Binding ElementName=ThemeToggle, Path=IsChecked, Mode=TwoWay}" />
                                </Grid>
                            </StackPanel>

                            <DockPanel>
                                <Button
                                    Width="150"
                                    HorizontalAlignment="Left"
                                    Content="Save Changes"
                                    Style="{DynamicResource DFPrimaryButton}" />
                                <Button
                                    Margin="10,0,0,0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Content="Cancel"
                                    Foreground="{DynamicResource DF_Text_Secondary_Brush}" />
                            </DockPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!--  Tab: Icons (Original)  -->
            <TabItem Header="Icon Gallery">
                <Grid Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Search Header  -->
                    <Border
                        Grid.Row="0"
                        Margin="0,0,0,20"
                        Style="{DynamicResource DFCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,10"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Text="Material Design Icons" />
                                <TextBlock Foreground="{DynamicResource DF_Text_Secondary_Brush}" Text="Click an icon to copy its XAML code." />
                            </StackPanel>

                            <TextBox
                                Grid.Column="1"
                                Width="300"
                                VerticalAlignment="Center"
                                helpers:ControlAttach.Watermark="Search icons..."
                                TextChanged="IconSearch_TextChanged">
                                <helpers:ControlAttach.Icon>
                                    <iconPacks:PackIconMaterial
                                        Width="14"
                                        Height="14"
                                        Kind="Magnify" />
                                </helpers:ControlAttach.Icon>
                            </TextBox>
                        </Grid>
                    </Border>

                    <!--  Icon Grid  -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="IconList">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button
                                        Width="100"
                                        Height="80"
                                        Margin="5"
                                        helpers:ControlAttach.CornerRadius="10"
                                        Click="IconItem_Click"
                                        Content="{Binding}"
                                        FontSize="11"
                                        Style="{DynamicResource DFVerticalButton}"
                                        ToolTip="{Binding}">
                                        <helpers:ControlAttach.Icon>
                                            <iconPacks:PackIconMaterial
                                                Width="24"
                                                Height="24"
                                                Kind="{Binding}" />
                                        </helpers:ControlAttach.Icon>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!--  DFPagination  -->
                    <StackPanel Grid.Row="2">
                        <Border
                            Grid.Row="2"
                            Margin="0,20,0,0"
                            Style="{DynamicResource DFCard}">
                            <controls:DFPagination
                                x:Name="IconDFPagination"
                                PageChanged="IconDFPagination_PageChanged"
                                PageSize="100" />
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>

        <!--  Global DFDrawer  -->
        <controls:DFDrawer
            x:Name="SettingsDFDrawer"
            Header="Global Settings"
            Position="Right">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Profile  -->
                <StackPanel
                    Grid.Row="0"
                    Margin="0,0,0,20"
                    Orientation="Horizontal">
                    <Border
                        Width="50"
                        Height="50"
                        Margin="0,0,15,0"
                        Background="{DynamicResource DF_Primary_Brush}"
                        CornerRadius="25">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="#FFFFFF"
                            Text="A" />
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{DynamicResource DF_Text_Primary_Brush}"
                            Text="Admin User" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource DF_Text_Secondary_Brush}"
                            Text="admin@DongFeng.com" />
                    </StackPanel>
                </StackPanel>

                <Separator
                    Grid.Row="1"
                    Margin="0,0,0,20"
                    Background="{DynamicResource DF_Border_Brush}" />

                <!--  Settings List  -->
                <ScrollViewer
                    Grid.Row="2"
                    Padding="0,0,10,0"
                    VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!--  Appearance Group  -->
                        <TextBlock
                            Margin="0,0,0,10"
                            FontWeight="Bold"
                            Foreground="{DynamicResource DF_Text_Primary_Brush}"
                            Text="Appearance" />
                        <controls:DFToggleSwitch
                            Margin="0,0,0,10"
                            Content="Dark Mode"
                            IsChecked="{Binding ElementName=ThemeToggle, Path=IsChecked, Mode=TwoWay}" />
                        <controls:DFToggleSwitch Margin="0,0,0,10" Content="Compact Mode" />

                        <TextBlock
                            Margin="0,5,0,5"
                            Foreground="{DynamicResource DF_Text_Secondary_Brush}"
                            Text="Accent Color" />
                        <StackPanel Margin="0,0,0,20" Orientation="Horizontal">
                            <Border
                                Width="20"
                                Height="20"
                                Margin="0,0,10,0"
                                Background="#18a058"
                                CornerRadius="10"
                                ToolTip="Green (Default)" />
                            <Border
                                Width="20"
                                Height="20"
                                Margin="0,0,10,0"
                                Background="#2080f0"
                                CornerRadius="10"
                                ToolTip="Blue" />
                            <Border
                                Width="20"
                                Height="20"
                                Margin="0,0,10,0"
                                Background="#f0a020"
                                CornerRadius="10"
                                ToolTip="Orange" />
                            <Border
                                Width="20"
                                Height="20"
                                Background="#d03050"
                                CornerRadius="10"
                                ToolTip="Red" />
                        </StackPanel>

                        <!--  General Group  -->
                        <TextBlock
                            Margin="0,0,0,10"
                            FontWeight="Bold"
                            Foreground="{DynamicResource DF_Text_Primary_Brush}"
                            Text="General" />

                        <TextBlock
                            Margin="0,0,0,5"
                            Foreground="{DynamicResource DF_Text_Secondary_Brush}"
                            Text="Language" />
                        <ComboBox Margin="0,0,0,15" SelectedIndex="0">
                            <ComboBoxItem Content="English (US)" />
                            <ComboBoxItem Content="简体中文" />
                            <ComboBoxItem Content="日本語" />
                        </ComboBox>

                        <TextBlock
                            Margin="0,5,0,10"
                            FontWeight="Bold"
                            Foreground="{DynamicResource DF_Text_Primary_Brush}"
                            Text="Notifications" />
                        <controls:DFToggleSwitch
                            Margin="0,0,0,10"
                            Content="Enable Push Notifications"
                            IsChecked="True" />
                        <controls:DFToggleSwitch
                            Margin="0,0,0,20"
                            Content="Email Digest"
                            IsChecked="False" />

                        <!--  System Group  -->
                        <TextBlock
                            Margin="0,0,0,10"
                            FontWeight="Bold"
                            Foreground="{DynamicResource DF_Text_Primary_Brush}"
                            Text="System" />
                        <DockPanel Margin="0,0,0,10" LastChildFill="False">
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource DF_Text_Secondary_Brush}"
                                Text="Version" />
                            <TextBlock
                                VerticalAlignment="Center"
                                DockPanel.Dock="Right"
                                Foreground="{DynamicResource DF_Text_Primary_Brush}"
                                Text="v1.0.2" />
                        </DockPanel>
                        <Button Margin="0,0,0,10" Content="Check for Updates" />
                        <Button Margin="0,0,0,20" Content="Clear Cache" />

                    </StackPanel>
                </ScrollViewer>

                <!--  Footer  -->
                <StackPanel Grid.Row="3" Margin="0,20,0,0">
                    <Button
                        Background="{DynamicResource DF_Error_Brush}"
                        BorderBrush="{DynamicResource DF_Error_Brush}"
                        Content="Log Out"
                        Foreground="White"
                        Style="{DynamicResource DFPrimaryButton}" />
                </StackPanel>
            </Grid>
        </controls:DFDrawer>
    </Grid>
</controls:DFWindow>
