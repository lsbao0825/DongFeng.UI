<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DongFeng.UI.Extend.Controls"
    xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf">

    <!--  Fonts  -->
    <FontFamily x:Key="Markdown_FontFamily">Segoe UI, Microsoft YaHei, SF Pro Text, PingFang SC, sans-serif</FontFamily>
    <FontFamily x:Key="Code_FontFamily">Consolas, Menlo, Courier New, monospace</FontFamily>

    <!--  Markdown Element Styles  -->
    <Style x:Key="DF_Markdown_Paragraph" TargetType="{x:Type Paragraph}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="24" />
        <Setter Property="Margin" Value="0,0,0,16" />
        <Setter Property="Foreground" Value="{DynamicResource DF_Text_Primary_Brush}" />
        <Setter Property="FontFamily" Value="{StaticResource Markdown_FontFamily}" />
    </Style>

    <Style x:Key="DF_Markdown_Heading1" TargetType="{x:Type Paragraph}">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="LineHeight" Value="38.4" />
        <Setter Property="Margin" Value="0,32,0,24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource DF_Text_Primary_Brush}" />
        <Setter Property="FontFamily" Value="{StaticResource Markdown_FontFamily}" />
    </Style>

    <Style x:Key="DF_Markdown_Heading2" TargetType="{x:Type Paragraph}">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="LineHeight" Value="30" />
        <Setter Property="Margin" Value="0,28,0,20" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource DF_Text_Primary_Brush}" />
        <Setter Property="FontFamily" Value="{StaticResource Markdown_FontFamily}" />
    </Style>

    <Style x:Key="DF_Markdown_Heading3" TargetType="{x:Type Paragraph}">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="LineHeight" Value="26" />
        <Setter Property="Margin" Value="0,24,0,16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource DF_Text_Primary_Brush}" />
        <Setter Property="FontFamily" Value="{StaticResource Markdown_FontFamily}" />
    </Style>

    <Style x:Key="DF_Markdown_Heading4" TargetType="{x:Type Paragraph}">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="LineHeight" Value="23.4" />
        <Setter Property="Margin" Value="0,20,0,12" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource DF_Text_Primary_Brush}" />
        <Setter Property="FontFamily" Value="{StaticResource Markdown_FontFamily}" />
    </Style>

    <Style x:Key="DF_Markdown_Heading5" TargetType="{x:Type Paragraph}">
        <Setter Property="FontSize" Value="17" />
        <Setter Property="LineHeight" Value="22.1" />
        <Setter Property="Margin" Value="0,20,0,12" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource DF_Text_Primary_Brush}" />
        <Setter Property="FontFamily" Value="{StaticResource Markdown_FontFamily}" />
    </Style>

    <Style x:Key="DF_Markdown_Heading6" TargetType="{x:Type Paragraph}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="20.8" />
        <Setter Property="Margin" Value="0,20,0,12" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="{DynamicResource DF_Text_Primary_Brush}" />
        <Setter Property="FontFamily" Value="{StaticResource Markdown_FontFamily}" />
    </Style>

    <Style x:Key="DF_Markdown_List" TargetType="{x:Type List}">
        <Setter Property="Margin" Value="0,8,0,8" />
        <Setter Property="Padding" Value="24,0,0,0" />
    </Style>

    <Style x:Key="DF_Markdown_ListItem" TargetType="{x:Type ListItem}">
        <Setter Property="Margin" Value="0,0,0,8" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="24" />
    </Style>

    <Style x:Key="DF_Markdown_InlineCode" TargetType="{x:Type Run}">
        <Setter Property="FontFamily" Value="{StaticResource Code_FontFamily}" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Background" Value="{DynamicResource DF_Header_Background_Brush}" />
    </Style>

    <Style x:Key="DF_Markdown_CodeBlock" TargetType="{x:Type Section}">
        <Setter Property="Margin" Value="0,16,0,16" />
        <Setter Property="Padding" Value="20,16,20,16" />
        <Setter Property="Background" Value="{DynamicResource DF_Header_Background_Brush}" />
        <Setter Property="FontFamily" Value="{StaticResource Code_FontFamily}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="22.4" />
    </Style>

    <Style x:Key="DF_Markdown_QuoteBlock" TargetType="{x:Type Section}">
        <Setter Property="Margin" Value="0,12,0,12" />
        <Setter Property="Padding" Value="16,12,16,12" />
        <Setter Property="BorderBrush" Value="{DynamicResource DF_Border_Brush}" />
        <Setter Property="BorderThickness" Value="4,0,0,0" />
        <Setter Property="Foreground" Value="{DynamicResource DF_Text_Secondary_Brush}" />
        <Setter Property="LineHeight" Value="24.8" />
    </Style>

    <Style x:Key="DF_Markdown_Link" TargetType="{x:Type Hyperlink}">
        <Setter Property="Foreground" Value="{DynamicResource DF_Info_Brush}" />
        <Setter Property="TextDecorations" Value="{x:Null}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="TextDecorations" Value="Underline" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="DF_Markdown_Table" TargetType="{x:Type Table}">
        <Setter Property="Margin" Value="0,16,0,16" />
        <Setter Property="CellSpacing" Value="0" />
        <Setter Property="BorderBrush" Value="{DynamicResource DF_Border_Brush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style x:Key="DF_Markdown_TableCell" TargetType="{x:Type TableCell}">
        <Setter Property="Padding" Value="12,8,12,8" />
        <Setter Property="BorderBrush" Value="{DynamicResource DF_Border_Brush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style TargetType="{x:Type controls:DFMarkdown}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DFMarkdown}">
                    <FlowDocumentScrollViewer x:Name="PART_Viewer" VerticalScrollBarVisibility="Auto">
                        <FlowDocumentScrollViewer.Resources>
                            <Style BasedOn="{StaticResource DF_Markdown_Paragraph}" TargetType="{x:Type Paragraph}" />
                            <Style BasedOn="{StaticResource DF_Markdown_List}" TargetType="{x:Type List}" />
                            <Style BasedOn="{StaticResource DF_Markdown_ListItem}" TargetType="{x:Type ListItem}" />
                            <Style BasedOn="{StaticResource DF_Markdown_Link}" TargetType="{x:Type Hyperlink}" />
                            <Style BasedOn="{StaticResource DF_Markdown_Table}" TargetType="{x:Type Table}" />
                            <Style BasedOn="{StaticResource DF_Markdown_TableCell}" TargetType="{x:Type TableCell}" />

                            <Style
                                x:Key="{x:Static markdig:Styles.Heading1StyleKey}"
                                BasedOn="{StaticResource DF_Markdown_Heading1}"
                                TargetType="{x:Type Paragraph}" />
                            <Style
                                x:Key="{x:Static markdig:Styles.Heading2StyleKey}"
                                BasedOn="{StaticResource DF_Markdown_Heading2}"
                                TargetType="{x:Type Paragraph}" />
                            <Style
                                x:Key="{x:Static markdig:Styles.Heading3StyleKey}"
                                BasedOn="{StaticResource DF_Markdown_Heading3}"
                                TargetType="{x:Type Paragraph}" />
                            <Style
                                x:Key="{x:Static markdig:Styles.Heading4StyleKey}"
                                BasedOn="{StaticResource DF_Markdown_Heading4}"
                                TargetType="{x:Type Paragraph}" />
                            <Style
                                x:Key="{x:Static markdig:Styles.Heading5StyleKey}"
                                BasedOn="{StaticResource DF_Markdown_Heading5}"
                                TargetType="{x:Type Paragraph}" />
                            <Style
                                x:Key="{x:Static markdig:Styles.Heading6StyleKey}"
                                BasedOn="{StaticResource DF_Markdown_Heading6}"
                                TargetType="{x:Type Paragraph}" />
                            <Style
                                x:Key="{x:Static markdig:Styles.CodeBlockStyleKey}"
                                BasedOn="{StaticResource DF_Markdown_CodeBlock}"
                                TargetType="{x:Type Section}" />
                            <Style
                                x:Key="{x:Static markdig:Styles.QuoteBlockStyleKey}"
                                BasedOn="{StaticResource DF_Markdown_QuoteBlock}"
                                TargetType="{x:Type Section}" />
                            <Style
                                x:Key="{x:Static markdig:Styles.CodeStyleKey}"
                                BasedOn="{StaticResource DF_Markdown_InlineCode}"
                                TargetType="{x:Type Run}" />
                        </FlowDocumentScrollViewer.Resources>
                    </FlowDocumentScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

